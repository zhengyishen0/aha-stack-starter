---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import RangeSlider from '../../components/pine/RangeSlider.astro';
---

<Layout title="RangeSlider Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">RangeSlider Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Range Sliders -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic Range Sliders</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Default Range Slider -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Default (0-100)</h3>
            <div class="space-y-6">
              <RangeSlider 
                id="basic-1" 
                name="basic1"
                value={50}
              />
              
              <RangeSlider 
                id="basic-2" 
                name="basic2"
                value={25}
                showValue={true}
              />
              
              <RangeSlider 
                id="basic-3" 
                name="basic3"
                value={75}
                showValue={false}
              />
            </div>
          </div>
          
          <!-- Custom Range -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Custom Range (1-10)</h3>
            <div class="space-y-6">
              <RangeSlider 
                id="custom-1" 
                name="custom1"
                min={1}
                max={10}
                value={5}
              />
              
              <RangeSlider 
                id="custom-2" 
                name="custom2"
                min={1}
                max={10}
                value={8}
                step={0.5}
              />
              
              <RangeSlider 
                id="custom-3" 
                name="custom3"
                min={1}
                max={10}
                value={3}
                showValue={false}
              />
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Step Size Variants -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Step Size Variants</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Integer Steps -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Integer Steps</h3>
            <div class="space-y-6">
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 1</p>
                <RangeSlider 
                  id="step-1" 
                  min={0}
                  max={20}
                  step={1}
                  value={10}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 5</p>
                <RangeSlider 
                  id="step-5" 
                  min={0}
                  max={100}
                  step={5}
                  value={25}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 10</p>
                <RangeSlider 
                  id="step-10" 
                  min={0}
                  max={100}
                  step={10}
                  value={50}
                />
              </div>
            </div>
          </div>
          
          <!-- Decimal Steps -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Decimal Steps</h3>
            <div class="space-y-6">
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 0.1</p>
                <RangeSlider 
                  id="step-01" 
                  min={0}
                  max={5}
                  step={0.1}
                  value={2.5}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 0.25</p>
                <RangeSlider 
                  id="step-025" 
                  min={0}
                  max={10}
                  step={0.25}
                  value={5.75}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 0.5</p>
                <RangeSlider 
                  id="step-05" 
                  min={0}
                  max={20}
                  step={0.5}
                  value={12.5}
                />
              </div>
            </div>
          </div>
          
          <!-- Large Steps -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Large Steps</h3>
            <div class="space-y-6">
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 25</p>
                <RangeSlider 
                  id="step-25" 
                  min={0}
                  max={200}
                  step={25}
                  value={100}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 50</p>
                <RangeSlider 
                  id="step-50" 
                  min={0}
                  max={500}
                  step={50}
                  value={250}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Step: 100</p>
                <RangeSlider 
                  id="step-100" 
                  min={0}
                  max={1000}
                  step={100}
                  value={600}
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Value Display Options -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Value Display Options</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- With Value Display -->
          <div>
            <h3 class="text-lg font-semibold mb-4">With Value Display</h3>
            <div class="space-y-6">
              <div>
                <p class="text-sm text-gray-600 mb-2">Percentage (0-100%)</p>
                <RangeSlider 
                  id="percent-1" 
                  min={0}
                  max={100}
                  value={65}
                  showValue={true}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Temperature (-10°C to 40°C)</p>
                <RangeSlider 
                  id="temp-1" 
                  min={-10}
                  max={40}
                  value={22}
                  showValue={true}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Volume (0-11)</p>
                <RangeSlider 
                  id="volume-1" 
                  min={0}
                  max={11}
                  value={7}
                  showValue={true}
                />
              </div>
            </div>
          </div>
          
          <!-- Without Value Display -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Without Value Display</h3>
            <div class="space-y-6">
              <div>
                <p class="text-sm text-gray-600 mb-2">Brightness (Clean slider)</p>
                <RangeSlider 
                  id="brightness-1" 
                  min={0}
                  max={100}
                  value={80}
                  showValue={false}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Opacity (0.0 - 1.0)</p>
                <RangeSlider 
                  id="opacity-1" 
                  min={0}
                  max={1}
                  step={0.01}
                  value={0.75}
                  showValue={false}
                />
              </div>
              
              <div>
                <p class="text-sm text-gray-600 mb-2">Progress (0-100)</p>
                <RangeSlider 
                  id="progress-1" 
                  min={0}
                  max={100}
                  value={45}
                  showValue={false}
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Disabled States -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Disabled States</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Low Value Disabled -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Low Value (Disabled)</h3>
            <RangeSlider 
              id="disabled-low" 
              min={0}
              max={100}
              value={15}
              disabled={true}
              showValue={true}
            />
          </div>
          
          <!-- Mid Value Disabled -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Mid Value (Disabled)</h3>
            <RangeSlider 
              id="disabled-mid" 
              min={0}
              max={100}
              value={50}
              disabled={true}
              showValue={true}
            />
          </div>
          
          <!-- High Value Disabled -->
          <div>
            <h3 class="text-lg font-semibold mb-4">High Value (Disabled)</h3>
            <RangeSlider 
              id="disabled-high" 
              min={0}
              max={100}
              value={85}
              disabled={true}
              showValue={true}
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Demo with Live Values -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Demo with Live Values</h2>
        <div x-data="{ 
          sliders: {
            volume: 75,
            brightness: 60,
            contrast: 50,
            saturation: 80,
            temperature: 6500
          },
          
          resetAll() {
            this.sliders = {
              volume: 50,
              brightness: 50,
              contrast: 50,
              saturation: 50,
              temperature: 6500
            };
          },
          
          randomizeAll() {
            this.sliders.volume = Math.floor(Math.random() * 101);
            this.sliders.brightness = Math.floor(Math.random() * 101);
            this.sliders.contrast = Math.floor(Math.random() * 101);
            this.sliders.saturation = Math.floor(Math.random() * 101);
            this.sliders.temperature = Math.floor(Math.random() * 4501) + 2000;
          }
        }">
          <div class="space-y-6">
            <div class="flex gap-4 items-center mb-6">
              <Button @click="resetAll()" variant="outline" color="blue" size="sm">
                Reset All
              </Button>
              <Button @click="randomizeAll()" variant="outline" color="purple" size="sm">
                Randomize
              </Button>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Audio Settings -->
              <div class="space-y-4">
                <h3 class="text-lg font-semibold">Audio Settings</h3>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Volume</label>
                    <Badge variant="soft" color="blue" size="sm">
                      <span x-text="sliders.volume + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="demo-volume" 
                    min={0}
                    max={100}
                    value={75}
                    showValue={false}
                    x-model="sliders.volume"
                  />
                </div>
              </div>
              
              <!-- Display Settings -->
              <div class="space-y-4">
                <h3 class="text-lg font-semibold">Display Settings</h3>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Brightness</label>
                    <Badge variant="soft" color="yellow" size="sm">
                      <span x-text="sliders.brightness + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="demo-brightness" 
                    min={0}
                    max={100}
                    value={60}
                    showValue={false}
                    x-model="sliders.brightness"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Contrast</label>
                    <Badge variant="soft" color="orange" size="sm">
                      <span x-text="sliders.contrast + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="demo-contrast" 
                    min={0}
                    max={100}
                    value={50}
                    showValue={false}
                    x-model="sliders.contrast"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Saturation</label>
                    <Badge variant="soft" color="pink" size="sm">
                      <span x-text="sliders.saturation + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="demo-saturation" 
                    min={0}
                    max={100}
                    value={80}
                    showValue={false}
                    x-model="sliders.saturation"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Color Temperature</label>
                    <Badge variant="soft" color="indigo" size="sm">
                      <span x-text="sliders.temperature + 'K'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="demo-temperature" 
                    min={2000}
                    max={6500}
                    step={100}
                    value={6500}
                    showValue={false}
                    x-model="sliders.temperature"
                  />
                </div>
              </div>
            </div>
            
            <!-- Live Preview -->
            <div class="mt-6 p-6 bg-gray-50 rounded-lg">
              <h4 class="font-semibold mb-3">Live Values Preview:</h4>
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 text-sm">
                <div class="text-center">
                  <div class="text-lg font-bold text-blue-600" x-text="sliders.volume"></div>
                  <div class="text-gray-600">Volume %</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-yellow-600" x-text="sliders.brightness"></div>
                  <div class="text-gray-600">Brightness %</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-orange-600" x-text="sliders.contrast"></div>
                  <div class="text-gray-600">Contrast %</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-pink-600" x-text="sliders.saturation"></div>
                  <div class="text-gray-600">Saturation %</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-indigo-600" x-text="sliders.temperature"></div>
                  <div class="text-gray-600">Temp K</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Real-world Use Cases -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Real-world Use Cases</h2>
        <div class="space-y-8">
          <!-- Price Range Filter -->
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">E-commerce Price Filter</h3>
            <div x-data="{ 
              minPrice: 25,
              maxPrice: 750,
              currency: '$'
            }" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Minimum Price</label>
                    <Badge variant="soft" color="green" size="sm">
                      <span x-text="currency + minPrice"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="price-min" 
                    min={0}
                    max={1000}
                    step={25}
                    value={25}
                    showValue={false}
                    x-model="minPrice"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Maximum Price</label>
                    <Badge variant="soft" color="red" size="sm">
                      <span x-text="currency + maxPrice"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="price-max" 
                    min={0}
                    max={1000}
                    step={25}
                    value={750}
                    showValue={false}
                    x-model="maxPrice"
                  />
                </div>
              </div>
              
              <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
                <span class="text-sm font-medium">Price Range:</span>
                <span class="text-lg font-bold text-blue-600">
                  <span x-text="currency + minPrice"></span> - <span x-text="currency + maxPrice"></span>
                </span>
              </div>
            </div>
          </div>
          
          <!-- Age Range Filter -->
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Demographics Age Filter</h3>
            <div x-data="{ 
              ageMin: 25,
              ageMax: 45
            }" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Minimum Age</label>
                    <Badge variant="soft" color="purple" size="sm">
                      <span x-text="ageMin + ' years'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="age-min" 
                    min={18}
                    max={65}
                    value={25}
                    showValue={false}
                    x-model="ageMin"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Maximum Age</label>
                    <Badge variant="soft" color="purple" size="sm">
                      <span x-text="ageMax + ' years'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="age-max" 
                    min={18}
                    max={65}
                    value={45}
                    showValue={false}
                    x-model="ageMax"
                  />
                </div>
              </div>
              
              <div class="flex items-center justify-between p-4 bg-purple-50 rounded-lg">
                <span class="text-sm font-medium">Target Age Group:</span>
                <span class="text-lg font-bold text-purple-600">
                  <span x-text="ageMin"></span> - <span x-text="ageMax"></span> years old
                </span>
              </div>
            </div>
          </div>
          
          <!-- System Performance Settings -->
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">System Performance Settings</h3>
            <div x-data="{ 
              cpuLimit: 80,
              memoryLimit: 70,
              networkBandwidth: 90
            }" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">CPU Limit</label>
                    <Badge variant="soft" color="red" size="sm">
                      <span x-text="cpuLimit + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="cpu-limit" 
                    min={10}
                    max={100}
                    step={5}
                    value={80}
                    showValue={false}
                    x-model="cpuLimit"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Memory Limit</label>
                    <Badge variant="soft" color="orange" size="sm">
                      <span x-text="memoryLimit + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="memory-limit" 
                    min={10}
                    max={100}
                    step={5}
                    value={70}
                    showValue={false}
                    x-model="memoryLimit"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label class="text-sm font-medium">Network Bandwidth</label>
                    <Badge variant="soft" color="green" size="sm">
                      <span x-text="networkBandwidth + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="network-bandwidth" 
                    min={10}
                    max={100}
                    step={5}
                    value={90}
                    showValue={false}
                    x-model="networkBandwidth"
                  />
                </div>
              </div>
              
              <div class="grid grid-cols-3 gap-4 mt-4">
                <div class="text-center p-3 bg-red-50 rounded-lg">
                  <div class="text-lg font-bold text-red-600" x-text="cpuLimit + '%'"></div>
                  <div class="text-xs text-gray-600">CPU Usage Limit</div>
                </div>
                <div class="text-center p-3 bg-orange-50 rounded-lg">
                  <div class="text-lg font-bold text-orange-600" x-text="memoryLimit + '%'"></div>
                  <div class="text-xs text-gray-600">Memory Usage Limit</div>
                </div>
                <div class="text-center p-3 bg-green-50 rounded-lg">
                  <div class="text-lg font-bold text-green-600" x-text="networkBandwidth + '%'"></div>
                  <div class="text-xs text-gray-600">Network Bandwidth</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Form Integration Example -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Settings Form with Range Sliders</h2>
        <form x-data="{ 
          settings: {
            volume: 75,
            brightness: 60,
            quality: 85,
            timeout: 30,
            retries: 3
          },
          
          saveSettings() {
            alert('Settings saved successfully!\\n\\n' + JSON.stringify(this.settings, null, 2));
          },
          
          resetToDefaults() {
            this.settings = {
              volume: 50,
              brightness: 50,
              quality: 75,
              timeout: 30,
              retries: 3
            };
          }
        }" @submit.prevent="saveSettings()">
          <div class="space-y-6">
            <!-- Media Settings -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Media Settings</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label for="form-volume" class="text-sm font-medium">Master Volume</label>
                    <Badge variant="soft" color="blue" size="sm">
                      <span x-text="settings.volume + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="form-volume" 
                    name="volume"
                    min={0}
                    max={100}
                    value={75}
                    showValue={false}
                    x-model="settings.volume"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label for="form-brightness" class="text-sm font-medium">Screen Brightness</label>
                    <Badge variant="soft" color="yellow" size="sm">
                      <span x-text="settings.brightness + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="form-brightness" 
                    name="brightness"
                    min={10}
                    max={100}
                    value={60}
                    showValue={false}
                    x-model="settings.brightness"
                  />
                </div>
              </div>
            </div>
            
            <!-- Performance Settings -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Performance Settings</h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label for="form-quality" class="text-sm font-medium">Render Quality</label>
                    <Badge variant="soft" color="green" size="sm">
                      <span x-text="settings.quality + '%'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="form-quality" 
                    name="quality"
                    min={25}
                    max={100}
                    step={5}
                    value={85}
                    showValue={false}
                    x-model="settings.quality"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <label for="form-timeout" class="text-sm font-medium">Request Timeout</label>
                    <Badge variant="soft" color="orange" size="sm">
                      <span x-text="settings.timeout + 's'"></span>
                    </Badge>
                  </div>
                  <RangeSlider 
                    id="form-timeout" 
                    name="timeout"
                    min={5}
                    max={120}
                    step={5}
                    value={30}
                    showValue={false}
                    x-model="settings.timeout"
                  />
                </div>
                
                <div>
                  <div class="flex justify-between items-center mb-2">
