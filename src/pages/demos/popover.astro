---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import Popover from '../../components/pine/Popover.astro';
---

<Layout title="Popover Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Popover Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">‚Üê Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- All Placement Options Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">All Placement Options</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <!-- Top Placements -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Top</h3>
            <div class="space-y-4">
              <Popover placement="top" trigger="click">
                <div slot="trigger">
                  <Button variant="solid" color="blue">Top</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover positioned at top</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="top-start" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="blue" size="sm">Top-Start</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Top-start alignment</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="top-end" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="blue" size="sm">Top-End</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Top-end alignment</p>
                  </div>
                </div>
              </Popover>
            </div>
          </div>
          
          <!-- Right Placements -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Right</h3>
            <div class="space-y-4">
              <Popover placement="right" trigger="click">
                <div slot="trigger">
                  <Button variant="solid" color="green">Right</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover positioned at right</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="right-start" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="green" size="sm">Right-Start</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Right-start alignment</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="right-end" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="green" size="sm">Right-End</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Right-end alignment</p>
                  </div>
                </div>
              </Popover>
            </div>
          </div>

          <!-- Bottom Placements -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Bottom</h3>
            <div class="space-y-4">
              <Popover placement="bottom" trigger="click">
                <div slot="trigger">
                  <Button variant="solid" color="purple">Bottom</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover positioned at bottom</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="bottom-start" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="purple" size="sm">Bottom-Start</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Bottom-start alignment</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="bottom-end" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="purple" size="sm">Bottom-End</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Bottom-end alignment</p>
                  </div>
                </div>
              </Popover>
            </div>
          </div>

          <!-- Left Placements -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Left</h3>
            <div class="space-y-4">
              <Popover placement="left" trigger="click">
                <div slot="trigger">
                  <Button variant="solid" color="red">Left</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover positioned at left</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="left-start" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="red" size="sm">Left-Start</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Left-start alignment</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="left-end" trigger="click">
                <div slot="trigger">
                  <Button variant="soft" color="red" size="sm">Left-End</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Left-end alignment</p>
                  </div>
                </div>
              </Popover>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Trigger Types Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Trigger Types</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Click Trigger</h3>
            <Popover placement="top" trigger="click">
              <div slot="trigger">
                <Button variant="solid" color="blue">Click Me</Button>
              </div>
              <div slot="content">
                <div class="p-4">
                  <h3 class="font-medium mb-2">Click Triggered</h3>
                  <p class="text-sm text-gray-600">Click the button to toggle this popover. Click outside to close.</p>
                </div>
              </div>
            </Popover>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Hover Trigger</h3>
            <Popover placement="top" trigger="hover" delay={200}>
              <div slot="trigger">
                <Button variant="solid" color="green">Hover Me</Button>
              </div>
              <div slot="content">
                <div class="p-4">
                  <h3 class="font-medium mb-2">Hover Triggered</h3>
                  <p class="text-sm text-gray-600">Appears on mouseenter, disappears on mouseleave.</p>
                </div>
              </div>
            </Popover>
          </div>

          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Focus Trigger</h3>
            <Popover placement="bottom" trigger="focus">
              <div slot="trigger">
                <input type="text" placeholder="Focus me" class="px-3 py-2 border border-gray-300 rounded-md text-sm" />
              </div>
              <div slot="content">
                <div class="p-4">
                  <h3 class="font-medium mb-2">Focus Triggered</h3>
                  <p class="text-sm text-gray-600">Appears when input gains focus, disappears when it loses focus.</p>
                </div>
              </div>
            </Popover>
          </div>

          <div class="text-center" x-data="{ manualOpen: false }">
            <h3 class="text-lg font-semibold mb-4">Manual Control</h3>
            <div class="space-y-2">
              <Popover placement="top" trigger="manual" x-bind:popoverOpen="manualOpen">
                <div slot="trigger">
                  <Button variant="solid" color="purple">Manual</Button>
                </div>
                <div slot="content">
                  <div class="p-4">
                    <h3 class="font-medium mb-2">Manual Control</h3>
                    <p class="text-sm text-gray-600">Controlled programmatically via Alpine.js state.</p>
                  </div>
                </div>
              </Popover>
              <Button variant="outline" size="sm" x-on:click="manualOpen = !manualOpen">
                <span x-text="manualOpen ? 'Close' : 'Open'"></span>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Arrow Indicators Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Arrow Indicators</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">With Arrow (Default)</h3>
            <div class="space-y-4">
              <Popover placement="top" trigger="click" arrow={true}>
                <div slot="trigger">
                  <Button variant="soft" color="blue">Top with Arrow</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover with arrow pointing down</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="right" trigger="click" arrow={true}>
                <div slot="trigger">
                  <Button variant="soft" color="green">Right with Arrow</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover with arrow pointing left</p>
                  </div>
                </div>
              </Popover>
            </div>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Without Arrow</h3>
            <div class="space-y-4">
              <Popover placement="top" trigger="click" arrow={false}>
                <div slot="trigger">
                  <Button variant="soft" color="purple">Top no Arrow</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Popover without arrow indicator</p>
                  </div>
                </div>
              </Popover>
              
              <Popover placement="right" trigger="click" arrow={false}>
                <div slot="trigger">
                  <Button variant="soft" color="red">Right no Arrow</Button>
                </div>
                <div slot="content">
                  <div class="p-3">
                    <p class="text-sm">Clean popover without arrow</p>
                  </div>
                </div>
              </Popover>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Content Slots Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Rich Content Slots</h2>
        <div class="space-y-6">
          <!-- User Menu -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">User Menu</h3>
            <Popover placement="bottom-end" trigger="click">
              <div slot="trigger">
                <Button variant="outline" color="blue">
                  <span class="inline-flex items-center gap-2">
                    <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=24&h=24&fit=crop&crop=face" 
                         alt="User" class="w-6 h-6 rounded-full" />
                    John Doe
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </span>
                </Button>
              </div>
              
              <div slot="content">
                <div class="py-2 min-w-48">
                  <div class="px-4 py-2 border-b border-gray-100">
                    <p class="text-sm font-medium">John Doe</p>
                    <p class="text-xs text-gray-500">john@example.com</p>
                  </div>
                  <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">Profile</a>
                  <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">Settings</a>
                  <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">Billing</a>
                  <div class="border-t border-gray-100">
                    <a href="#" class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-50">Sign out</a>
                  </div>
                </div>
              </div>
            </Popover>
          </div>

          <!-- Search Suggestions -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Search with Suggestions</h3>
            <Popover placement="bottom-start" trigger="focus" closeOnEscape={true}>
              <div slot="trigger">
                <input type="text" placeholder="Search products..." 
                       class="px-4 py-2 w-64 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
              </div>
              
              <div slot="content">
                <div class="py-2 w-64">
                  <div class="px-3 py-1 text-xs font-medium text-gray-500 uppercase tracking-wide">Recent Searches</div>
                  <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">MacBook Pro</a>
                  <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">iPhone 15</a>
                  <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">AirPods</a>
                  <div class="border-t border-gray-100 mt-2 pt-2">
                    <div class="px-3 py-1 text-xs font-medium text-gray-500 uppercase tracking-wide">Popular</div>
                    <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">üî• Best Sellers</a>
                    <a href="#" class="block px-4 py-2 text-sm hover:bg-gray-50">‚ö° New Arrivals</a>
                  </div>
                </div>
              </div>
            </Popover>
          </div>

          <!-- Color Picker -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Color Picker</h3>
            <Popover placement="bottom" trigger="click">
              <div slot="trigger">
                <Button variant="outline" color="neutral">
                  <span class="inline-flex items-center gap-2">
                    <span class="w-4 h-4 bg-blue-500 rounded border"></span>
                    Choose Color
                  </span>
                </Button>
              </div>
              
              <div slot="content">
                <div class="p-4">
                  <h3 class="font-medium mb-3">Select Color</h3>
                  <div class="grid grid-cols-6 gap-2 mb-3">
                    <button class="w-8 h-8 bg-red-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-orange-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-yellow-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-green-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-blue-500 rounded border-2 border-blue-400"></button>
                    <button class="w-8 h-8 bg-purple-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-pink-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-gray-500 rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-black rounded border-2 border-transparent hover:border-gray-300"></button>
                    <button class="w-8 h-8 bg-white rounded border-2 border-transparent hover:border-gray-300"></button>
                  </div>
                  <div class="flex gap-2">
                    <Button size="sm" color="blue">Apply</Button>
                    <Button size="sm" variant="outline" color="neutral">Reset</Button>
                  </div>
                </div>
              </div>
            </Popover>
          </div>
        </div>
      </div>
    </Card>

    <!-- Form Elements Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Form Elements within Popovers</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Quick Form -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Quick Contact Form</h3>
            <Popover placement="bottom" trigger="click" interactive={true}>
              <div slot="trigger">
                <Button variant="solid" color="green">Quick Contact</Button>
              </div>
              
              <div slot="content">
                <form class="p-4 w-72">
                  <h3 class="font-medium mb-3">Send Message</h3>
                  <div class="space-y-3">
                    <input type="text" placeholder="Your name" 
                           class="w-full px-3 py-2 border border-gray-300 rounded text-sm" />
                    <input type="email" placeholder="Email address" 
                           class="w-full px-3 py-2 border border-gray-300 rounded text-sm" />
                    <textarea placeholder="Your message..." rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded text-sm resize-none"></textarea>
                    <div class="flex gap-2">
                      <Button size="sm" color="green" type="submit">Send</Button>
                      <Button size="sm" variant="outline" color="neutral" type="button">Cancel</Button>
                    </div>
                  </div>
                </form>
              </div>
            </Popover>
          </div>

          <!-- Settings Panel -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Settings Panel</h3>
            <Popover placement="bottom-end" trigger="click" interactive={true}>
              <div slot="trigger">
                <Button variant="outline" color="neutral">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  Settings
                </Button>
              </div>
              
              <div slot="content">
                <div class="p-4 w-64">
                  <h3 class="font-medium mb-3">Preferences</h3>
                  <div class="space-y-3">
                    <label class="flex items-center">
                      <input type="checkbox" class="rounded border-gray-300 mr-2" checked />
                      <span class="text-sm">Email notifications</span>
                    </label>
                    <label class="flex items-center">
                      <input type="checkbox" class="rounded border-gray-300 mr-2" />
                      <span class="text-sm">Push notifications</span>
                    </label>
                    <label class="flex items-center">
                      <input type="checkbox" class="rounded border-gray-300 mr-2" checked />
                      <span class="text-sm">Auto-save drafts</span>
                    </label>
                    <div class="pt-2 border-t border-gray-100">
                      <label class="block text-sm font-medium mb-1">Theme</label>
                      <select class="w-full px-2 py-1 border border-gray-300 rounded text-sm">
                        <option>Light</option>
                        <option>Dark</option>
                        <option>Auto</option>
                      </select>
                    </div>
                    <div class="flex gap-2 pt-2">
                      <Button size="sm" color="blue">Save</Button>
                      <Button size="sm" variant="ghost" color="neutral">Reset</Button>
                    </div>
                  </div>
                </div>
              </div>
            </Popover>
          </div>
        </div>
      </div>
    </Card>

    <!-- Dismissible Behavior Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Dismissible Behavior</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Click Outside to Close</h3>
            <Popover placement="top" trigger="click" closeOnClickOutside={true}>
              <div slot="trigger">
                <Button variant="soft" color="blue">Click Outside Closes</Button>
              </div>
              <div slot="content">
                <div class="p-4">
                  <p class="text-sm">Click anywhere outside this popover to close it.</p>
                </div>
              </div>
            </Popover>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Escape Key to Close</h3>
            <Popover placement="top" trigger="click" closeOnEscape={true}>
              <div slot="trigger">
                <Button variant="soft" color="green">Press Escape</Button>
              </div>
              <div slot="content">
                <div class="p-4">
                  <p class="text-sm">Press the Escape key to close this popover.</p>
                </div>
              </div>
            </Popover>
          </div>

          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">No Auto-dismiss</h3>
            <Popover placement="top" trigger="click" closeOnClickOutside={false} closeOnEscape={false}>
              <div slot="trigger">
                <Button variant="soft" color="purple">No Auto-close</Button>
              </div>
              <div slot="content">
                <div class="p-4">
                  <p class="text-sm mb-2">This popover won't close automatically.</p>
                  <Button size="sm" color="purple" onclick="this.closest('[x-data]').popoverHide()">Manual Close</Button>
                </div>
              </div>
            </Popover>
          </div>
        </div>
      </div>
    </Card>

    <!-- Delay Settings Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Delay Settings</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">No Delay</h3>
            <Popover placement="top" trigger="hover" delay={0} hideDelay={0}>
              <div slot="trigger">
                <Button variant="soft" color="blue">Instant</Button>
              </div>
              <div slot="content">
                <div class="p-3">
                  <p class="text-sm">Appears and disappears instantly</p>
                </div>
              </div>
            </Popover>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Medium Delay</h3>
            <Popover placement="top" trigger="hover" delay={300} hideDelay={200}>
              <div slot="trigger">
                <Button variant="soft" color="yellow">300ms delay</Button>
              </div>
              <div slot="content">
                <div class="p-3">
                  <p class="text-sm">300ms show delay, 200ms hide delay</p>
                </div>
              </div>
            </Popover>
          </div>

          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Long Delay</h3>
            <Popover placement="top" trigger="hover" delay={800} hideDelay={400}>
              <div slot="trigger">
                <Button variant="soft" color="purple">800ms delay</Button>
              </div>
              <div slot="content">
                <div class="p-3">
                  <p class="text-sm">800ms show delay, 400ms hide delay</p>
                </div>
              </div>
            </Popover>
          </div>
        </div>
      </div>
    </Card>

    <!-- Smart Positioning Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Smart Positioning & Auto-repositioning</h2>
        <p class="text-gray-600 mb-4">Test popovers near viewport edges to see auto-repositioning in action</p>
        
        <div class="space-y-6">
          <div class="flex justify-between items-center">
