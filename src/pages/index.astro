---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Pine UI Components for better styling
import Card from '../components/pine/Card.astro';
import Badge from '../components/pine/Badge.astro';
import Button from '../components/pine/Button.astro';

const homeContent = await getEntry('pages', 'home');
const { Content } = await homeContent?.render() || { Content: null };
---

<Layout>
	<main>
		<!-- Hero Section -->
		<div>
			<h1>Welcome to AHA Stack</h1>
			<p>
				A modern web development stack combining Astro, HTMX, and Alpine.js
			</p>
			<div>
				<Badge color="blue">Astro</Badge>
				<Badge color="green">HTMX</Badge>
				<Badge color="purple">Alpine.js</Badge>
			</div>
			<div>
				<Button href="/demo" variant="solid" color="blue" size="lg">
					View Demo
				</Button>
				<Button variant="outline" color="neutral" size="lg">
					GitHub
				</Button>
			</div>
		</div>
		
		<!-- Features Section -->
		<div>
			<Card>
				<div>
					<Badge color="blue">Astro</Badge>
					<h3>Static Site Generation</h3>
					<p>Fast, optimized builds with component islands for dynamic content</p>
				</div>
			</Card>
			
			<Card>
				<div>
					<Badge color="green">HTMX</Badge>
					<h3>Dynamic Server Interactions</h3>
					<p>AJAX, WebSockets, and server-sent events with minimal JavaScript</p>
				</div>
			</Card>
			
			<Card>
				<div>
					<Badge color="purple">Alpine.js</Badge>
					<h3>Reactive UI Components</h3>
					<p>Lightweight framework for client-side interactivity</p>
				</div>
			</Card>
		</div>
		
		<!-- Content from Markdown -->
		{Content && (
			<Card>
				<div>
					<Content />
				</div>
			</Card>
		)}
	</main>
</Layout>
