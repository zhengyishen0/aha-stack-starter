---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// UI Components for better styling
import {
    Avatar,
    Badge,
    Button,
    Card,
    Column,
    Grid,
    Page,
    Row,
    Section,
    Text,
} from '../components/ui/core';

// Import GitHub icon
import githubIconUrl from '../assets/github-icon-white.svg?url';

// Import essential styles
import '../styles/pages/home.css';

const homeContent = await getEntry('pages', 'home');
const pageData = JSON.stringify(homeContent?.data || []);
---

<Layout>
    <Page maxWidth="full" x-data={pageData}>
        <Column class="main-container">
            <!-- Navigation -->
            <Row justify="end" variant="invisible">
                <Avatar
                    icon={githubIconUrl}
                    href="https://github.com/zhengyishen0/basis"
                    alt="GitHub Repository"
                    size="md"
                    variant="circle"
                    elevation="elevated"
                    theme="dark"
                    iconScale="sm"
                />
            </Row>

            <!-- Hero Section -->
            <Section class="hero-section">
                <Text as="h1" class="hero-title">Basis</Text>
                <Text as="p" class="hero-description">
                    Build on Fundamentals - A methodology for modern web
                    development using basic tools and clear boundaries
                </Text>
                <Row justify="center" gap="tight" wrap class="hero-badges">
                    <Badge variant="default" size="lg">Astro</Badge>
                    <Badge variant="default" size="lg">Alpine</Badge>
                    <Badge variant="default" size="lg">Supabase</Badge>
                </Row>
                <Row justify="center" gap="default" class="hero-buttons">
                    <Button
                        href="./todo"
                        variant="solid"
                        color="blue"
                        size="md"
                    >
                        Demo
                    </Button>
                    <!-- <Button href="./design-system" variant="outline" color="neutral" size="md">
					Components
				</Button> -->
                </Row>
            </Section>

            <!-- Features Section -->
            <Section class="features-section">
                <Text as="h2" class="features-title"
                    >What Makes <span class="basis-underline">Basis</span> Different</Text
                >
                <Grid
                    columns="3"
                    gap="default"
                    justify="center"
                    x-for="feature in features"
                    x-key="feature.name"
                >
                    <Card variant="floating" class="feature-card">
                        <div class="feature-content">
                            <Badge
                                variant="default"
                                size="lg"
                                class="feature-badge"
                                x-text="feature.name"
                            />
                            <Text
                                as="h3"
                                class="feature-card-title"
                                x-text="feature.title"
                            />
                            <Text
                                as="p"
                                class="feature-card-description"
                                x-text="feature.description"
                            />
                        </div>
                    </Card>
                </Grid>
            </Section>
        </Column>
    </Page>
</Layout>
