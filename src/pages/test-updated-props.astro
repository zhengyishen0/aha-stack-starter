---
// Test page for updated component props
import Card from '@/components/ui/display/card/Card.astro';
import CardHeader from '@/components/ui/display/card/CardHeader.astro';
import CardContent from '@/components/ui/display/card/CardContent.astro';
import ListItem from '@/components/ui/layout/ListItem.astro';
import GridItem from '@/components/ui/layout/GridItem.astro';
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Updated Props Test</title>
</head>
<body class="min-h-screen bg-gray-50 p-8">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-8">Updated Component Props Test</h1>
        
        <!-- Card Tests -->
        <section class="mb-12">
            <h2 class="text-2xl font-semibold mb-6">Card Components</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                <!-- Fixed size card (default) -->
                <Card variant="default" size="fixed" padding="lg" direction="column" justify="start" align="stretch">
                    <CardHeader padding="md" justify="center" align="center">
                        <h3 class="text-lg font-semibold">Fixed Size Card</h3>
                        <p class="text-sm text-gray-600">Default fixed dimensions</p>
                    </CardHeader>
                    <CardContent padding="md" justify="start" align="stretch">
                        <p>This card has fixed width and height with centered header and flexible content.</p>
                        <div class="mt-4 p-2 bg-blue-100 rounded">Content area</div>
                    </CardContent>
                </Card>

                <!-- Expanding size card -->
                <Card variant="shadow" size="extend" padding="md" direction="column" justify="start" align="stretch" overflow="expand">
                    <CardHeader padding="sm" justify="start" align="start">
                        <h3 class="text-lg font-semibold">Expanding Card</h3>
                    </CardHeader>
                    <CardContent padding="sm" justify="center" align="center">
                        <p>This card expands to fit its content.</p>
                        <div class="mt-2 p-4 bg-green-100 rounded">
                            <p>More content that makes the card expand</p>
                            <p>Even more content here</p>
                        </div>
                    </CardContent>
                </Card>

                <!-- Horizontal card -->
                <Card variant="outline" size="horizontal" padding="none" direction="row" justify="start" align="stretch" overflow="auto">
                    <CardHeader padding="md" justify="center" align="center">
                        <h3 class="text-base font-semibold">Horizontal</h3>
                    </CardHeader>
                    <CardContent padding="md" justify="start" align="start">
                        <p>This card stretches horizontally and uses row direction.</p>
                    </CardContent>
                </Card>
            </div>
        </section>

        <!-- ListItem and GridItem Tests -->
        <section class="mb-12">
            <h2 class="text-2xl font-semibold mb-6">Dynamic Items</h2>
            
            <!-- List with ListItems -->
            <div class="mb-8">
                <h3 class="text-lg font-medium mb-4">List Items with Different Props</h3>
                <div class="bg-white rounded-lg border p-4">
                    <ListItem padding="sm" justify="start" align="center" overflow="auto">
                        <div class="w-8 h-8 bg-blue-500 rounded-full mr-3"></div>
                        <div>
                            <p class="font-medium">Small padding, auto overflow</p>
                            <p class="text-sm text-gray-600">This item has small padding and auto overflow</p>
                        </div>
                    </ListItem>
                    
                    <ListItem padding="lg" justify="between" align="center" overflow="expand">
                        <div>
                            <p class="font-medium">Large padding, expand overflow</p>
                            <p class="text-sm text-gray-600">This item has large padding and expand overflow</p>
                        </div>
                        <div class="w-6 h-6 bg-green-500 rounded"></div>
                    </ListItem>
                    
                    <ListItem padding="md" justify="center" align="center" overflow="auto">
                        <p class="font-medium">Centered item</p>
                    </ListItem>
                </div>
            </div>

            <!-- Grid with GridItems -->
            <div class="mb-8">
                <h3 class="text-lg font-medium mb-4">Grid Items with Different Props</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <GridItem 
                        padding="sm" 
                        justify="start" 
                        align="start" 
                        overflow="auto"
                    >
                        <h4 class="font-medium mb-2">Small Padding</h4>
                        <p class="text-sm text-gray-600">Auto overflow, start alignment</p>
                    </GridItem>
                    
                    <GridItem 
                        padding="lg" 
                        justify="center" 
                        align="center" 
                        overflow="expand"
                    >
                        <h4 class="font-medium mb-2">Large Padding</h4>
                        <p class="text-sm text-gray-600">Large padding, centered, expand overflow</p>
                    </GridItem>
                    
                    <GridItem 
                        padding="md" 
                        justify="end" 
                        align="stretch" 
                        overflow="fixed"
                    >
                        <h4 class="font-medium mb-2">End Justified</h4>
                        <p class="text-sm text-gray-600">Fixed overflow, end alignment</p>
                        <div class="mt-auto pt-4">
                            <div class="w-full h-2 bg-purple-200 rounded"></div>
                        </div>
                    </GridItem>
                </div>
            </div>
        </section>

        <!-- Overflow Behavior Tests -->
        <section class="mb-12">
            <h2 class="text-2xl font-semibold mb-6">Overflow Behavior Tests</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Auto overflow -->
                <Card variant="default" size="fixed" padding="sm" overflow="auto">
                    <CardHeader padding="sm">
                        <h3 class="text-lg font-semibold">Auto Overflow</h3>
                    </CardHeader>
                    <CardContent padding="sm">
                        <p>This content will scroll when it exceeds the container:</p>
                        <div class="space-y-2">
                            <div class="p-2 bg-blue-100 rounded">Item 1</div>
                            <div class="p-2 bg-blue-100 rounded">Item 2</div>
                            <div class="p-2 bg-blue-100 rounded">Item 3</div>
                            <div class="p-2 bg-blue-100 rounded">Item 4</div>
                            <div class="p-2 bg-blue-100 rounded">Item 5</div>
                            <div class="p-2 bg-blue-100 rounded">Item 6</div>
                            <div class="p-2 bg-blue-100 rounded">Item 7</div>
                            <div class="p-2 bg-blue-100 rounded">Item 8</div>
                        </div>
                    </CardContent>
                </Card>

                <!-- Expand overflow -->
                <Card variant="shadow" size="extend" padding="sm" overflow="expand">
                    <CardHeader padding="sm">
                        <h3 class="text-lg font-semibold">Expand Overflow</h3>
                    </CardHeader>
                    <CardContent padding="sm">
                        <p>This container expands with its content:</p>
                        <div class="space-y-2">
                            <div class="p-2 bg-green-100 rounded">Item 1</div>
                            <div class="p-2 bg-green-100 rounded">Item 2</div>
                            <div class="p-2 bg-green-100 rounded">Item 3</div>
                            <div class="p-2 bg-green-100 rounded">Item 4</div>
                            <div class="p-2 bg-green-100 rounded">Item 5</div>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </section>
    </div>

    <script>
        console.log('Updated props test page loaded');
        console.log('Test components with new overflow:', ['auto', 'fixed', 'expand', 'wrap']);
        console.log('Test components with new padding props');
        console.log('Test components with new alignment props');
        console.log('Test Card component with direction props');
    </script>
</body>
</html>

<style>
    body {
        font-family: system-ui, sans-serif;
    }
</style>