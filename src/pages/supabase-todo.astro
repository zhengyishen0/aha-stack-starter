---
import Layout from "../layouts/Layout.astro";
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Checkbox from '../components/ui/Checkbox.astro';
import List from '../components/ui/List.astro';
import Row from '../components/ui/Row.astro';
import TextInput from '../components/ui/TextInput.astro';
import Navbar from '../components/ui/Navbar.astro';

// Page-specific styles
import '../styles/pages/todo.css';
import '../styles/components/states.css';
import '../styles/utilities.css';

const title = "Todo App with Supabase";
---

<Layout title={title}>
    <div 
        class="todo-app-container" 
        x-data="{ 
            auth: $store.auth,
            todo: $store.todo,
            async init() {
                await this.auth.init()
                await this.todo.loadTodos()
            },
            async signInAnonymously() {
                await this.auth.signInAnonymously()
                await this.todo.loadTodos()
            },
            async signOut() {
                await this.auth.signOut()
                this.todo.cleanup()
            }
        }" 
        x-init="init()"
    >
        <!-- Navigation Bar -->
        <Navbar variant="elevated" maxWidth="container">
            <div slot="start">
                <Button href="../" variant="solid" color="neutral" size="sm">Back to Home</Button>
            </div>
            
            <div slot="center">
                <h1 class="navbar-title">Supabase Todo App</h1>
            </div>
            
            <div slot="end">
                <div class="navbar-spacer"></div>
            </div>
        </Navbar>

        <!-- Main Content -->
        <div class="todo-main">
            <div class="todo-main-container">
            
                <!-- Auth Status for Non-authenticated Users -->
                <div x-show="!auth.isAuthenticated" class="auth-prompt">
                    <Card context="spacious">
                        <div slot="body">
                            <p class="auth-prompt-text">Click to start using the app</p>
                            <Button 
                                @click="signInAnonymously()"
                                :disabled="auth.loading || todo.loading"
                                class="button-loading"
                                context="nav"
                                x-text="auth.loading ? 'Signing in...' : 'Sign In Anonymously'"
                            >
                            </Button>
                        </div>
                    </Card>
                </div>

                <!-- Todo App - Two Column Layout -->
                <div x-show="auth.isAuthenticated" class="todo-columns">
                    
                    <!-- Left Column: My Todos -->
                    <Card class="todo-column todo-column-user">
                        <div slot="header">
                            <h2 class="todo-column-title">My Todos</h2>
                        </div>
                        <div slot="body" class="todo-column-content">

                        <!-- Filter Buttons and Auth Info -->
                        <Row justify="between" wrap>
                            <!-- Status Filter Buttons (Left) -->
                            <Row gap="tight">
                                <Button 
                                    @click="todo.setUserFilter('all')"
                                    :class="todo.userFilter === 'all' ? 'button-solid-neutral' : 'button-soft-neutral'"
                                    context="xs"
                                >
                                    All
                                </Button>
                                <Button 
                                    @click="todo.setUserFilter('active')"
                                    :class="todo.userFilter === 'active' ? 'button-solid-neutral' : 'button-soft-neutral'"
                                    context="xs"
                                >
                                    Active
                                </Button>
                                <Button 
                                    @click="todo.setUserFilter('completed')"
                                    :class="todo.userFilter === 'completed' ? 'button-solid-neutral' : 'button-soft-neutral'"
                                    context="xs"
                                >
                                    Completed
                                </Button>
                            </Row>
                            
                            <!-- Auth Info (Right) -->
                            <Row gap="loose">
                                <span>Signed in as: <span x-text="auth.userDisplayId" class="auth-user-id"></span></span>
                                <Button @click="signOut()" context="xs" class="button-solid-neutral">Sign Out</Button>
                            </Row>
                        </Row>

                        <!-- Error Message -->
                        <div x-show="todo.error" class="alert alert-error" x-text="todo.error">
                        </div>

                        <!-- Loading State -->
                        <div x-show="todo.loading && todo.filteredUserTodos.length === 0" class="loading-state">
                            Loading your todos...
                        </div>

                        <!-- User Todo List - Flex 1 to take remaining space -->
                        <List 
                            spacing="default"
                            x-for="item in todo.filteredUserTodos" 
                            x-key="item.id"
                        >
                            <Row class="list-item" align="center" justify="start">
                                <Checkbox 
                                    :checked="item.is_complete"
                                    @change="todo.toggleTodo(item.id, $event.target.checked)"
                                />
                                <div class="todo-text">
                                    <span 
                                        :class="item.is_complete ? 'todo-text-completed' : 'todo-text-active'"
                                        x-text="item.task"
                                    ></span>
                                </div>
                                <Button 
                                    @click="todo.deleteTodo(item.id)"
                                    context="xs"
                                    class="button-solid-neutral"
                                >
                                    Delete
                                </Button>
                            </Row>
                        </List>
                        
                        <!-- Empty State -->
                        <div x-show="todo.filteredUserTodos.length === 0 && !todo.loading" class="empty-state">
                            <span x-show="todo.userFilter === 'all'">No todos yet. Add one below!</span>
                            <span x-show="todo.userFilter === 'active'">No active todos.</span>
                            <span x-show="todo.userFilter === 'completed'">No completed todos.</span>
                        </div>

                        </div>
                        
                        <div slot="footer">
                            <!-- Stats -->
                            <div x-show="todo.userTodos.length > 0" class="stats">
                                <span x-text="todo.userActiveCount"></span> active, 
                                <span x-text="todo.userCompletedCount"></span> completed
                            </div>
                            
                            <!-- Add Todo Form -->
                            <form @submit.prevent="todo.addTodo($refs.todoInput.value); $refs.todoInput.value = ''" class="todo-form">
                                <Row gap="default">
                                    <TextInput
                                        x-ref="todoInput"
                                        type="text" 
                                        placeholder="Add a new todo..."
                                        required
                                        class="flex-1"
                                    />
                                    <Button 
                                        type="submit"
                                        :disabled="todo.loading"
                                        context="nav"
                                        x-text="todo.loading ? '...' : 'Add'"
                                    >
                                    </Button>
                                </Row>
                            </form>
                        </div>
                    </Card>

                    <!-- Right Column: All Todos -->
                    <Card class="todo-column todo-column-all">
                        <div slot="header">
                            <h2 class="todo-column-title">Realtime Todos</h2>
                        </div>
                        <div slot="body" class="todo-column-content">
                        
                        <!-- Filter Buttons and User Count -->
                        <Row justify="between" wrap>
                            <!-- Status Filter Buttons (Left) -->
                            <Row gap="tight">
                                <Button 
                                    @click="todo.setAllFilter('all')"
                                    :class="todo.allFilter === 'all' ? 'button-solid-neutral' : 'button-soft-neutral'"
                                    context="xs"
                                >
                                    All
                                </Button>
                                <Button 
                                    @click="todo.setAllFilter('active')"
                                    :class="todo.allFilter === 'active' ? 'button-solid-neutral' : 'button-soft-neutral'"
                                    context="xs"
                                >
                                    Active
                                </Button>
                                <Button 
                                    @click="todo.setAllFilter('completed')"
                                    :class="todo.allFilter === 'completed' ? 'button-solid-neutral' : 'button-soft-neutral'"
                                    context="xs"
                                >
                                    Completed
                                </Button>
                            </Row>
                            
                            <!-- User Count (Right) -->
                            <div class="user-count">
                                <span x-text="todo.uniqueUserCount"></span> contributor<span x-show="todo.uniqueUserCount !== 1">s</span> online
                            </div>
                        </Row>

                        <!-- Error Message -->
                        <div x-show="todo.error" class="alert alert-error" x-text="todo.error">
                        </div>

                        <!-- Loading State -->
                        <div x-show="todo.loading && todo.filteredAllTodos.length === 0" class="loading-state">
                            Loading all todos...
                        </div>

                        <!-- All Todos List - Flex 1 to take remaining space -->
                        <List 
                            spacing="default"
                            x-for="item in todo.filteredAllTodos" 
                            x-key="item.id"
                        >
                            <Row class="list-item list-item-readonly" align="center" justify="start">
                                <Checkbox 
                                    :checked="item.is_complete"
                                    disabled
                                />
                                <div class="todo-text">
                                    <span 
                                        :class="item.is_complete ? 'todo-text-completed' : 'todo-text-active'"
                                        x-text="item.task"
                                    ></span>
                                </div>
                                <div class="todo-user-info">
                                    <span x-text="item.user_id.slice(0, 8) + '...'"></span>
                                    <span x-show="item.user_id === auth.currentUser?.id" class="badge badge-sm badge-blue">You</span>
                                </div>
                            </Row>
                        </List>
                        
                        <!-- Empty State -->
                        <div x-show="todo.filteredAllTodos.length === 0 && !todo.loading" class="empty-state">
                            <span x-show="todo.allFilter === 'all'">No todos in database.</span>
                            <span x-show="todo.allFilter === 'active'">No active todos.</span>
                            <span x-show="todo.allFilter === 'completed'">No completed todos.</span>
                        </div>

                        </div>
                        
                        <div slot="footer">
                            <!-- Stats -->
                            <div x-show="todo.allTodos.length > 0" class="stats">
                                <span x-text="todo.allActiveCount"></span> active, 
                                <span x-text="todo.allCompletedCount"></span> completed
                            </div>
                        </div>
                    </Card>
                </div>
            </div>
        </div>
    </div>

</Layout>