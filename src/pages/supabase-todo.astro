---
import Layout from "../layouts/Layout.astro";
const title = "Todo App with Supabase";
---

<Layout title={title}>
    <div 
        class="bg-gray-100 min-h-screen py-8" 
        x-data="$store.todo" 
        x-init="init()"
    >
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
            <!-- Header with back button -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-gray-800">Todo App</h1>
                <a href="../" class="px-3 py-1 text-sm bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors">
                    Back to Home
                </a>
            </div>
            
            <!-- Auth Status -->
            <div class="mb-4">
                <div x-show="!isAuthenticated" class="text-center py-4">
                    <p class="text-gray-600 mb-2">Click to start using the app</p>
                    <button 
                        @click="signInAnonymously()"
                        :disabled="loading"
                        class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 disabled:opacity-50"
                        x-text="loading ? 'Signing in...' : 'Sign In Anonymously'"
                    >
                    </button>
                </div>
                <div x-show="isAuthenticated" class="text-center text-sm text-gray-600 mb-4">
                    Signed in as: <span x-text="userDisplayId"></span>
                    <button @click="signOut()" class="ml-2 text-red-500 hover:text-red-700 text-xs">Sign Out</button>
                </div>
            </div>

            <!-- Todo App -->
            <div x-show="isAuthenticated">
                <!-- Add Todo Form -->
                <form @submit.prevent="addTodo($refs.todoInput.value); $refs.todoInput.value = ''" class="mb-6">
                    <div class="flex gap-2">
                        <input 
                            x-ref="todoInput"
                            type="text" 
                            placeholder="Add a new todo..."
                            class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required
                        >
                        <button 
                            type="submit"
                            :disabled="loading"
                            class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 disabled:opacity-50"
                            x-text="loading ? '...' : 'Add'"
                        >
                        </button>
                    </div>
                </form>

                <!-- Filter Buttons -->
                <div class="flex gap-2 mb-4">
                    <button 
                        @click="setFilter('all')"
                        :class="currentFilter === 'all' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'"
                        class="filter-btn px-3 py-1 rounded text-sm"
                    >
                        All
                    </button>
                    <button 
                        @click="setFilter('active')"
                        :class="currentFilter === 'active' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'"
                        class="filter-btn px-3 py-1 rounded text-sm"
                    >
                        Active
                    </button>
                    <button 
                        @click="setFilter('completed')"
                        :class="currentFilter === 'completed' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'"
                        class="filter-btn px-3 py-1 rounded text-sm"
                    >
                        Completed
                    </button>
                </div>

                <!-- Error Message -->
                <div x-show="error" class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded" x-text="error">
                </div>

                <!-- Loading State -->
                <div x-show="loading && filteredTodos.length === 0" class="text-center py-8 text-gray-500">
                    Loading todos...
                </div>

                <!-- Todo List -->
                <div class="space-y-2">
                    <template x-for="todo in filteredTodos" :key="todo.id">
                        <div class="flex items-center gap-3 p-3 border border-gray-200 rounded-md">
                            <input 
                                type="checkbox" 
                                :checked="todo.is_complete"
                                @change="toggleTodo(todo.id, $event.target.checked)"
                                class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                            >
                            <span 
                                :class="todo.is_complete ? 'line-through text-gray-500' : 'text-gray-800'"
                                class="flex-1"
                                x-text="todo.task"
                            ></span>
                            <button 
                                @click="deleteTodo(todo.id)"
                                class="text-red-500 hover:text-red-700 text-sm"
                            >
                                Delete
                            </button>
                        </div>
                    </template>
                </div>

                <!-- Empty State -->
                <div x-show="filteredTodos.length === 0 && !loading" class="text-center py-8 text-gray-500">
                    <span x-show="currentFilter === 'all'">No todos yet. Add one above!</span>
                    <span x-show="currentFilter === 'active'">No active todos.</span>
                    <span x-show="currentFilter === 'completed'">No completed todos.</span>
                </div>

                <!-- Stats -->
                <div x-show="todos.length > 0" class="mt-6 text-sm text-gray-600 text-center">
                    <span x-text="activeCount"></span> active, 
                    <span x-text="completedCount"></span> completed
                </div>
            </div>
        </div>
    </div>

</Layout>