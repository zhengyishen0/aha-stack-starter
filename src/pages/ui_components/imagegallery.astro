---

<Layout title="ImageGallery Component Test">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">ImageGallery Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">‚Üê Back to Test Suite</Button>
        <Button href="/test/videoplayer" variant="ghost" color="neutral">Video Player Test</Button>
      </div>
    </div>

    <!-- Basic Gallery -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic Image Gallery</h2>
        <p class="text-gray-600 mb-4">Standard 3-column grid with medium spacing and square aspect ratio</p>
        <ImageGallery 
          images={basicImages}
          columns={3}
          gap="md"
          aspectRatio="square"
        />
      </div>
    </Card>

    <!-- Grid Layout Variations -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Grid Layout Variations</h2>
        
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-3">2 Columns</h3>
            <ImageGallery 
              images={basicImages.slice(0, 4)}
              columns={2}
              gap="lg"
              aspectRatio="video"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">4 Columns</h3>
            <ImageGallery 
              images={basicImages.slice(0, 8)}
              columns={4}
              gap="sm"
              aspectRatio="square"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">5 Columns</h3>
            <ImageGallery 
              images={basicImages}
              columns={5}
              gap="md"
              aspectRatio="photo"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">6 Columns</h3>
            <ImageGallery 
              images={manyImages.slice(0, 12)}
              columns={6}
              gap="sm"
              aspectRatio="square"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Aspect Ratio Variations -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Aspect Ratio Variations</h2>
        
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-3">Square (1:1)</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="square"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Video (16:9)</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="video"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Photo (4:3)</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="photo"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Auto (Original Ratios)</h3>
            <ImageGallery 
              images={variousAspectImages}
              columns={3}
              gap="md"
              aspectRatio="auto"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Gap Spacing -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Gap Spacing Options</h2>
        
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-3">Small Gap</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="sm"
              aspectRatio="square"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Medium Gap</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="square"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Large Gap</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="lg"
              aspectRatio="square"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Thumbnail Optimization -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Thumbnail Optimization</h2>
        <p class="text-gray-600 mb-4">Gallery with separate thumbnail and full-size images for better performance</p>
        <ImageGallery 
          images={thumbnailImages}
          columns={3}
          gap="md"
          aspectRatio="photo"
        />
      </div>
    </Card>

    <!-- Caption Support -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Caption Support</h2>
        <p class="text-gray-600 mb-4">Images with captions that appear on hover and in lightbox</p>
        <ImageGallery 
          images={[
            { 
              src: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800&h=600&fit=crop', 
              alt: 'Serene lake at sunset', 
              caption: 'Peaceful mountain lake surrounded by pine trees at golden sunset' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1514565131-fce0801e5785?w=800&h=600&fit=crop', 
              alt: 'City skyline at dusk', 
              caption: 'Modern city skyline with glass buildings reflecting the golden hour light' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1558618047-3c8c76ca7d13?w=800&h=600&fit=crop', 
              alt: 'Colorful abstract art', 
              caption: 'Vibrant abstract composition with flowing colors and geometric shapes' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1551522435-a13afa10f17a?w=800&h=600&fit=crop', 
              alt: 'Eagle in flight', 
              caption: 'Majestic bald eagle soaring through a crystal clear blue sky' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1520637836862-4d197d17c90a?w=800&h=600&fit=crop', 
              alt: 'Gothic cathedral interior', 
              caption: 'Historic cathedral with intricate stone carvings and stained glass windows' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1499002238440-d264edd596ec?w=800&h=600&fit=crop', 
              alt: 'Lavender fields', 
              caption: 'Rolling hills covered in purple lavender fields under a starry night sky' 
            }
          ]}
          columns={3}
          gap="md"
          aspectRatio="square"
        />
      </div>
    </Card>

    <!-- Large Gallery -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Large Gallery with Lazy Loading</h2>
        <p class="text-gray-600 mb-4">Gallery with many images demonstrating lazy loading performance</p>
        <ImageGallery 
          images={manyImages}
          columns={4}
          gap="sm"
          aspectRatio="square"
        />
      </div>
    </Card>

    <!-- Custom Styling -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styling</h2>
        
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-3">Custom Container Classes</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="square"
              class="border-2 border-dashed border-blue-300 p-4 rounded-lg bg-blue-50"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Custom Thumbnail Styling</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="square"
              thumbnailClass="border-4 border-purple-500 shadow-lg transform hover:rotate-1 transition-transform"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Custom Lightbox Styling</h3>
            <ImageGallery 
              images={basicImages.slice(0, 6)}
              columns={3}
              gap="md"
              aspectRatio="square"
              lightboxClass="bg-purple-900 bg-opacity-95"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Lightbox Features Demo -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Lightbox Features</h2>
        <p class="text-gray-600 mb-4">Click any image to test lightbox functionality:</p>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="bg-gray-50 p-3 rounded-lg text-center">
            <kbd class="bg-gray-200 px-2 py-1 rounded text-sm font-mono">‚Üê‚Üí</kbd>
            <p class="text-sm mt-1">Navigate</p>
          </div>
          <div class="bg-gray-50 p-3 rounded-lg text-center">
            <kbd class="bg-gray-200 px-2 py-1 rounded text-sm font-mono">Esc</kbd>
            <p class="text-sm mt-1">Close</p>
          </div>
          <div class="bg-gray-50 p-3 rounded-lg text-center">
            <span class="bg-gray-200 px-2 py-1 rounded text-sm">Click</span>
            <p class="text-sm mt-1">Backdrop</p>
          </div>
          <div class="bg-gray-50 p-3 rounded-lg text-center">
            <span class="bg-gray-200 px-2 py-1 rounded text-sm">Buttons</span>
            <p class="text-sm mt-1">Navigate</p>
          </div>
        </div>
        
        <ImageGallery 
          images={[
            { 
              src: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1600&h=1200&fit=crop', 
              alt: 'High-res mountain lake', 
              caption: 'Ultra high resolution mountain lake perfect for lightbox viewing' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1501785888041-af3ef285b470?w=1600&h=1200&fit=crop', 
              alt: 'Dramatic landscape', 
              caption: 'Stunning landscape with perfect reflections to test navigation' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1518837695005-2083093ee35b?w=1600&h=1200&fit=crop', 
              alt: 'Ocean power', 
              caption: 'Powerful ocean waves demonstrating keyboard navigation support' 
            },
            { 
              src: 'https://images.unsplash.com/photo-1514565131-fce0801e5785?w=1600&h=1200&fit=crop', 
              alt: 'City lights', 
              caption: 'Vibrant city skyline showcasing full-screen viewing capabilities' 
            }
          ]}
          columns={4}
          gap="md"
          aspectRatio="square"
        />
      </div>
    </Card>

    <!-- Interactive Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Gallery Configuration</h2>
        <div x-data="{ 
          columns: 3,
          gap: 'md',
          aspectRatio: 'square',
          showCaptions: true,
          galleryImages: [
            { src: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&h=600&fit=crop', alt: 'Mountain reflection', caption: 'Beautiful mountain landscape with lake reflection' },
            { src: 'https://images.unsplash.com/photo-1480714378408-67cf0d13bc1f?w=800&h=600&fit=crop', alt: 'Glass architecture', caption: 'Modern urban architecture with geometric glass patterns' },
            { src: 'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=800&h=600&fit=crop', alt: 'Forest trail', caption: 'Peaceful nature photography in autumn forest' },
            { src: 'https://images.unsplash.com/photo-1547036967-23d11aacaee0?w=800&h=600&fit=crop', alt: 'Colorful mural', caption: 'Vibrant street art with flowing abstract design' },
            { src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800&h=600&fit=crop', alt: 'Natural portrait', caption: 'Portrait photography with beautiful natural lighting' },
            { src: 'https://images.unsplash.com/photo-1558618047-3c8c76ca7d13?w=800&h=600&fit=crop', alt: 'Abstract waves', caption: 'Dynamic abstract composition with flowing colors' },
            { src: 'https://images.unsplash.com/photo-1513475382585-d06e58bcb0e0?w=800&h=600&fit=crop', alt: 'Bridge design', caption: 'Architectural detail of modern suspension bridge' },
            { src: 'https://images.unsplash.com/photo-1432405972618-c60b0225b8f9?w=800&h=600&fit=crop', alt: 'Water texture', caption: 'Natural texture of cascading waterfall' },
            { src: 'https://images.unsplash.com/photo-1514565131-fce0801e5785?w=800&h=600&fit=crop', alt: 'Urban lights', caption: 'City lights creating magical twilight atmosphere' }
          ]
        }">
          <div class="space-y-4 mb-6">
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Columns:</label>
                <select x-model="columns" class="border rounded px-2 py-1 text-sm">
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                </select>
              </div>
              
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Gap:</label>
                <select x-model="gap" class="border rounded px-2 py-1 text-sm">
                  <option value="sm">Small</option>
                  <option value="md">Medium</option>
                  <option value="lg">Large</option>
                </select>
              </div>
              
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Aspect Ratio:</label>
                <select x-model="aspectRatio" class="border rounded px-2 py-1 text-sm">
                  <option value="square">Square</option>
                  <option value="video">Video (16:9)</option>
                  <option value="photo">Photo (4:3)</option>
                  <option value="auto">Auto</option>
                </select>
              </div>
