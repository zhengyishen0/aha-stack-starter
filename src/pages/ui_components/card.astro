---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
---

<Layout title="Card Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Card Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Variants Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Card Variants</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Default Card -->
          <Card variant="default" padding="md">
            <div slot="header">
              <h3 class="text-lg font-semibold">Default Card</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">This is a default card with standard border and background. Perfect for most use cases.</p>
            </div>
            <div slot="footer">
              <Button variant="solid" color="blue" size="sm">Action</Button>
            </div>
          </Card>

          <!-- Bordered Card -->
          <Card variant="bordered" padding="md">
            <div slot="header">
              <h3 class="text-lg font-semibold">Bordered Card</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">This card has a thicker border for more visual emphasis and better definition.</p>
            </div>
            <div slot="footer">
              <Button variant="outline" color="blue" size="sm">Action</Button>
            </div>
          </Card>

          <!-- Shadow Card -->
          <Card variant="shadow" padding="md">
            <div slot="header">
              <h3 class="text-lg font-semibold">Shadow Card</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">This card includes a subtle shadow effect for a more elevated appearance.</p>
            </div>
            <div slot="footer">
              <Button variant="soft" color="green" size="sm">Action</Button>
            </div>
          </Card>

          <!-- Elevated Card -->
          <Card variant="elevated" padding="md">
            <div slot="header">
              <h3 class="text-lg font-semibold">Elevated Card</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">This card has a more pronounced shadow for maximum visual hierarchy.</p>
            </div>
            <div slot="footer">
              <Button variant="solid" color="purple" size="sm">Action</Button>
            </div>
          </Card>
        </div>
      </div>
    </Card>

    <!-- Padding Variants Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Padding Variants</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- No Padding -->
          <Card variant="shadow" padding="none" class="overflow-hidden">
            <div slot="header" class="p-4 border-b">
              <h3 class="text-lg font-semibold">No Padding</h3>
            </div>
            <div slot="body" class="p-4">
              <p class="text-gray-600">Custom padding control with none setting.</p>
            </div>
            <div slot="footer" class="p-4 bg-gray-50">
              <Button variant="solid" color="blue" size="sm">Action</Button>
            </div>
          </Card>

          <!-- Small Padding -->
          <Card variant="shadow" padding="sm">
            <div slot="header">
              <h3 class="text-lg font-semibold">Small Padding</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">Compact spacing for tighter layouts.</p>
            </div>
            <div slot="footer">
              <Button variant="outline" color="green" size="sm">Action</Button>
            </div>
          </Card>

          <!-- Medium Padding (Default) -->
          <Card variant="shadow" padding="md">
            <div slot="header">
              <h3 class="text-lg font-semibold">Medium Padding</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">Standard spacing that works well for most content.</p>
            </div>
            <div slot="footer">
              <Button variant="soft" color="yellow" size="sm">Action</Button>
            </div>
          </Card>

          <!-- Large Padding -->
          <Card variant="shadow" padding="lg">
            <div slot="header">
              <h3 class="text-lg font-semibold">Large Padding</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">Generous spacing for important content.</p>
            </div>
            <div slot="footer">
              <Button variant="solid" color="red" size="sm">Action</Button>
            </div>
          </Card>
        </div>
      </div>
    </Card>

    <!-- Simple Content Cards -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Simple Content Cards</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Card with just body content -->
          <Card variant="default" padding="md">
            <p>This card only uses the default slot (body) without header or footer sections.</p>
          </Card>

          <Card variant="bordered" padding="md">
            <div class="text-center">
              <h3 class="text-xl font-bold mb-2">Simple Card</h3>
              <p class="text-gray-600">Clean and minimal design</p>
            </div>
          </Card>

          <Card variant="shadow" padding="md">
            <div class="space-y-3">
              <Badge variant="soft" color="blue">Featured</Badge>
              <h3 class="font-semibold">Featured Content</h3>
              <p class="text-gray-600">Special content with badge</p>
            </div>
          </Card>
        </div>
      </div>
    </Card>

    <!-- Complex Content Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Complex Content Examples</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- User Profile Card -->
          <Card variant="shadow" padding="md">
            <div slot="header">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">
                  JD
                </div>
                <div>
                  <h3 class="font-semibold">John Doe</h3>
                  <p class="text-sm text-gray-500">Software Engineer</p>
                </div>
              </div>
            </div>
            <div slot="body">
              <div class="space-y-3">
                <p class="text-gray-600">Full-stack developer with 5+ years of experience in React, Node.js, and cloud technologies.</p>
                <div class="flex gap-2">
                  <Badge variant="soft" color="blue" size="sm">React</Badge>
                  <Badge variant="soft" color="green" size="sm">Node.js</Badge>
                  <Badge variant="soft" color="purple" size="sm">AWS</Badge>
                </div>
              </div>
            </div>
            <div slot="footer">
              <div class="flex gap-2">
                <Button variant="solid" color="blue" size="sm">View Profile</Button>
                <Button variant="outline" color="neutral" size="sm">Contact</Button>
              </div>
            </div>
          </Card>

          <!-- Article Card -->
          <Card variant="elevated" padding="md">
            <div slot="header">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="font-semibold">Getting Started with Alpine.js</h3>
                  <p class="text-sm text-gray-500">Published 2 days ago</p>
                </div>
                <Badge variant="dot" color="green" size="sm">New</Badge>
              </div>
            </div>
            <div slot="body">
              <p class="text-gray-600 mb-3">Learn how to build reactive components with Alpine.js, a minimal JavaScript framework perfect for adding interactivity to your HTML.</p>
              <div class="flex items-center gap-4 text-sm text-gray-500">
                <span>5 min read</span>
                <span>•</span>
                <span>142 views</span>
                <span>•</span>
                <span>8 likes</span>
              </div>
            </div>
            <div slot="footer">
              <div class="flex justify-between items-center">
                <div class="flex gap-2">
                  <Badge variant="soft" color="blue" size="sm">Tutorial</Badge>
                  <Badge variant="soft" color="green" size="sm">Alpine.js</Badge>
                </div>
                <Button variant="solid" color="blue" size="sm">Read More</Button>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </Card>

    <!-- Interactive Demo -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Demo</h2>
        <div x-data="{ 
          cardVariant: 'default',
          cardPadding: 'md',
          showHeader: true,
          showFooter: true,
          headerText: 'Dynamic Card Header',
          bodyText: 'This card is dynamically configured using Alpine.js. Change the settings above to see how different options affect the appearance.',
          footerText: 'Card Footer'
        }">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Variant</label>
              <select x-model="cardVariant" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="default">Default</option>
                <option value="bordered">Bordered</option>
                <option value="shadow">Shadow</option>
                <option value="elevated">Elevated</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Padding</label>
              <select x-model="cardPadding" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="none">None</option>
                <option value="sm">Small</option>
                <option value="md">Medium</option>
                <option value="lg">Large</option>
              </select>
            </div>
            
            <div>
              <label class="flex items-center text-sm font-medium text-gray-700">
                <input x-model="showHeader" type="checkbox" class="mr-2" />
                Show Header
              </label>
            </div>
            
            <div>
              <label class="flex items-center text-sm font-medium text-gray-700">
                <input x-model="showFooter" type="checkbox" class="mr-2" />
                Show Footer
              </label>
            </div>
          </div>
          
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">Body Text</label>
            <textarea x-model="bodyText" rows="3" class="w-full border border-gray-300 rounded-md px-3 py-2"></textarea>
          </div>
          
          <!-- Dynamic Card Preview -->
          <Card 
            :variant="cardVariant"
            :padding="cardPadding"
          >
            <div x-show="showHeader" slot="header">
              <h3 class="text-lg font-semibold" x-text="headerText"></h3>
            </div>
            <div slot="body">
              <p class="text-gray-600" x-text="bodyText"></p>
            </div>
            <div x-show="showFooter" slot="footer">
              <Button variant="solid" color="blue" size="sm">Demo Action</Button>
            </div>
          </Card>
        </div>
      </div>
    </Card>

    <!-- Custom Styling Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styling Examples</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Custom Border Color -->
          <Card variant="bordered" padding="md" class="border-blue-300">
            <div slot="header" class="text-blue-800">
              <h3 class="font-semibold">Custom Border</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">Card with custom blue border color</p>
            </div>
          </Card>

          <!-- Custom Background -->
          <Card variant="shadow" padding="md" class="bg-gradient-to-br from-purple-50 to-pink-50">
            <div slot="header">
              <h3 class="font-semibold text-purple-800">Gradient Background</h3>
            </div>
            <div slot="body">
              <p class="text-purple-600">Card with custom gradient background</p>
            </div>
          </Card>

          <!-- Custom Shape -->
          <Card variant="elevated" padding="md" class="rounded-xl">
            <div slot="header">
              <h3 class="font-semibold">Custom Rounded</h3>
            </div>
            <div slot="body">
              <p class="text-gray-600">Card with extra rounded corners</p>
            </div>
          </Card>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All variants render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Padding options working</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Slot system functional</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Custom styling support</p>
          </div>
        </div>
      </div>
    </Card>
  </main>
</Layout>