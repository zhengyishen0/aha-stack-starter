<style>
	/* Fix content overflow issues */
	.pricing-container {
		overflow-x: auto;
	}
	
	/* Add extra spacing between pricing cards */
	.pricing-container :global(.grid),
	.pricing-container :global(.flex) {
		gap: 2rem !important;
	}
	
	.pricing-container :global(.space-x-6) {
		gap: 2rem !important;
	}
	
	.pricing-container :global(.grid-cols-3) {
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 2rem !important;
	}
	
	@media (min-width: 768px) {
		.pricing-container :global(.grid),
		.pricing-container :global(.flex) {
			gap: 3rem !important;
		}
		
		.pricing-container :global(.space-x-6) {
			gap: 3rem !important;
		}
		
		.pricing-container :global(.grid-cols-3) {
			gap: 3rem !important;
		}
	}
	
	@media (min-width: 1024px) {
		.pricing-container :global(.grid),
		.pricing-container :global(.flex) {
			gap: 4rem !important;
		}
		
		.pricing-container :global(.space-x-6) {
			gap: 4rem !important;
		}
		
		.pricing-container :global(.grid-cols-3) {
			gap: 4rem !important;
		}
	}
	
	/* FAQ Section Styling */
	.faq-section {
		margin: 0 auto;
		width: 100%;
	}
	
	.faq-section p,
	.faq-section h3,
	.faq-section h4 {
		word-wrap: break-word;
		overflow-wrap: break-word;
		hyphens: auto;
	}
	
	.faq-section .space-y-6 > div {
		word-break: break-word;
	}
	
	/* Ensure proper responsive behavior */
	@media (max-width: 768px) {
		.pricing-container {
			padding: 0 16px;
		}
		
		.faq-container {
			padding: 0 16px;
		}
	}
</style>