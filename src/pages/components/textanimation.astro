---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import TextAnimation from '../../components/pine/TextAnimation.astro';
---

<Layout title="TextAnimation Component Test">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">TextAnimation Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">‚Üê Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Animation Types -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Animation Types</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Fade Animation</h3>
            <div class="p-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg text-center">
              <TextAnimation 
                text="Smooth Fade Effect" 
                animation="fade"
                class="text-2xl font-bold text-blue-900"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Scale Animation</h3>
            <div class="p-6 bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg text-center">
              <TextAnimation 
                text="Dynamic Scale" 
                animation="scale"
                class="text-2xl font-bold text-green-900"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Slide Animation</h3>
            <div class="p-6 bg-gradient-to-r from-purple-50 to-violet-50 rounded-lg text-center">
              <TextAnimation 
                text="Sliding Text" 
                animation="slide"
                class="text-2xl font-bold text-purple-900"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Bounce Animation</h3>
            <div class="p-6 bg-gradient-to-r from-orange-50 to-red-50 rounded-lg text-center">
              <TextAnimation 
                text="Bouncy Fun!" 
                animation="bounce"
                class="text-2xl font-bold text-orange-900"
              />
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Timing Variations -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Timing Variations</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Fast Stagger (0.05s)</h3>
            <div class="p-6 bg-gray-50 rounded-lg text-center">
              <TextAnimation 
                text="Quick Fire Animation" 
                animation="fade"
                stagger={0.05}
                class="text-xl font-semibold text-gray-800"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Normal Stagger (0.1s)</h3>
            <div class="p-6 bg-blue-50 rounded-lg text-center">
              <TextAnimation 
                text="Balanced Timing" 
                animation="scale"
                stagger={0.1}
                class="text-xl font-semibold text-blue-800"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Slow Stagger (0.2s)</h3>
            <div class="p-6 bg-green-50 rounded-lg text-center">
              <TextAnimation 
                text="Deliberate Pace" 
                animation="slide"
                stagger={0.2}
                class="text-xl font-semibold text-green-800"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Very Slow Stagger (0.3s)</h3>
            <div class="p-6 bg-purple-50 rounded-lg text-center">
              <TextAnimation 
                text="Dramatic Effect" 
                animation="bounce"
                stagger={0.3}
                class="text-xl font-semibold text-purple-800"
              />
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Duration Settings -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Duration Settings</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Quick Duration (0.3s)</h3>
            <div class="p-6 bg-yellow-50 rounded-lg text-center">
              <TextAnimation 
                text="Snappy Animation" 
                animation="scale"
                duration={0.3}
                class="text-xl font-semibold text-yellow-800"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Standard Duration (0.5s)</h3>
            <div class="p-6 bg-indigo-50 rounded-lg text-center">
              <TextAnimation 
                text="Standard Speed" 
                animation="fade"
                duration={0.5}
                class="text-xl font-semibold text-indigo-800"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Slow Duration (0.8s)</h3>
            <div class="p-6 bg-pink-50 rounded-lg text-center">
              <TextAnimation 
                text="Smooth and Slow" 
                animation="slide"
                duration={0.8}
                class="text-xl font-semibold text-pink-800"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Very Slow Duration (1.2s)</h3>
            <div class="p-6 bg-teal-50 rounded-lg text-center">
              <TextAnimation 
                text="Luxurious Timing" 
                animation="bounce"
                duration={1.2}
                class="text-xl font-semibold text-teal-800"
              />
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Different Text Content -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Different Text Content</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Short Text</h3>
            <div class="p-6 bg-gray-900 rounded-lg text-center">
              <TextAnimation 
                text="Hi!" 
                animation="bounce"
                class="text-3xl font-bold text-white"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Medium Text</h3>
            <div class="p-6 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg text-center">
              <TextAnimation 
                text="Pine UI Components" 
                animation="scale"
                class="text-2xl font-bold text-white"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Long Text</h3>
            <div class="p-6 bg-gradient-to-r from-green-600 to-blue-600 rounded-lg text-center">
              <TextAnimation 
                text="Beautiful Animations with Alpine.js and GSAP" 
                animation="fade"
                stagger={0.08}
                class="text-xl font-semibold text-white"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Text with Special Characters</h3>
            <div class="p-6 bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg text-center">
              <TextAnimation 
                text="Hello, World! üéâ #Pine-UI @2024" 
                animation="slide"
                class="text-xl font-semibold text-white"
              />
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Numbers and Symbols</h3>
            <div class="p-6 bg-gradient-to-r from-orange-600 to-red-600 rounded-lg text-center">
              <TextAnimation 
                text="$1,234.56 + 789% = Success!" 
                animation="bounce"
                stagger={0.05}
                class="text-xl font-bold text-white"
              />
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Manual Start Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Manual Start Control</h2>
        <div class="space-y-6">
          <div x-data="{ trigger1: false }">
            <div class="flex items-center gap-4 mb-4">
              <h3 class="text-lg font-semibold">Click to Animate:</h3>
              <Button 
                variant="solid" 
                color="blue"
                x-on:click="trigger1 = !trigger1"
              >
                Trigger Animation
              </Button>
            </div>
            <div class="p-6 bg-blue-50 rounded-lg text-center">
              <div x-show="!trigger1">
                <span class="text-xl font-semibold text-blue-800">Ready to animate...</span>
              </div>
              <div x-show="trigger1">
                <TextAnimation 
                  text="Animation Triggered!" 
                  animation="scale"
                  autoStart={true}
                  class="text-xl font-semibold text-blue-800"
                />
              </div>
            </div>
          </div>

          <div x-data="{ trigger2: false }">
            <div class="flex items-center gap-4 mb-4">
              <h3 class="text-lg font-semibold">Another Example:</h3>
              <Button 
                variant="solid" 
                color="green"
                x-on:click="trigger2 = !trigger2"
              >
                Start Bounce
              </Button>
            </div>
            <div class="p-6 bg-green-50 rounded-lg text-center">
              <div x-show="!trigger2">
                <span class="text-xl font-semibold text-green-800">Click button to see bounce effect</span>
              </div>
              <div x-show="trigger2">
                <TextAnimation 
                  text="Bouncing Into View!" 
                  animation="bounce"
                  stagger={0.1}
                  autoStart={true}
                  class="text-xl font-semibold text-green-800"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Playground -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Playground</h2>
        <div x-data="{ 
          text: 'Customize Me!',
          animation: 'fade',
          stagger: 0.1,
          duration: 0.5,
          triggerKey: 0
        }">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div>
              <label class="block text-sm font-medium mb-2">Text</label>
              <input 
                x-model="text" 
                type="text" 
                class="w-full px-3 py-2 border rounded-lg"
                placeholder="Enter your text"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Animation</label>
              <select x-model="animation" class="w-full px-3 py-2 border rounded-lg">
                <option value="fade">Fade</option>
                <option value="scale">Scale</option>
                <option value="slide">Slide</option>
                <option value="bounce">Bounce</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Stagger (s)</label>
              <input 
                x-model.number="stagger" 
                type="number" 
                step="0.05" 
                min="0" 
                max="1"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Duration (s)</label>
              <input 
                x-model.number="duration" 
                type="number" 
                step="0.1" 
                min="0.1" 
                max="2"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
          </div>

          <div class="flex justify-center mb-6">
            <Button 
              variant="solid" 
              color="purple"
              x-on:click="triggerKey++"
            >
              Replay Animation
            </Button>
          </div>

          <div class="p-8 bg-gradient-to-br from-gray-900 to-gray-800 rounded-lg text-center min-h-[120px] flex items-center justify-center">
            <div :key="triggerKey">
              <!-- Note: Alpine.js binding to component props requires a workaround -->
              <div x-html="`<div class='text-2xl font-bold text-white' 
                x-data='{
                  text: &quot;${text}&quot;,
                  animation: &quot;${animation}&quot;,
                  stagger: ${stagger},
                  duration: ${duration}
                }' 
                x-init=&quot;
                  $nextTick(() => {
                    if (!window.gsap) {
                      let script = document.createElement(\\'script\\');
                      script.src = \\'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js\\';
                      script.onload = function() { runAnimation(); };
                      document.head.appendChild(script);
                    } else {
                      runAnimation();
                    }
                    
                    function runAnimation() {
                      const chars = $el.querySelectorAll(\\'.char\\');
                      const tl = gsap.timeline();
                      
                      gsap.set(chars, {
                        opacity: animation === \\'fade\\' ? 0 : 1,
                        scale: animation === \\'scale\\' ? 0 : 1,
                        x: animation === \\'slide\\' ? -20 : 0,
                        y: animation === \\'bounce\\' ? -20 : 0
                      });
                      
                      tl.to(chars, {
                        opacity: 1,
                        scale: 1,
                        x: 0,
                        y: 0,
                        duration: duration,
                        stagger: stagger,
                        ease: animation === \\'bounce\\' ? \\'bounce.out\\' : \\'power2.out\\'
                      });
                    }
                  })
                &quot;>
                <template x-for=&quot;(char, index) in text.split(\\'\\')&quot; :key=&quot;index&quot;>
                  <span class=&quot;char inline-block&quot; x-text=&quot;char === \\' \\' ? \\'\\\\u00A0\\' : char&quot;></span>
                </template>
              </div>`">
              </div>
            </div>
          </div>

          <div class="mt-4 text-sm text-gray-600 text-center">
            <p><strong>Current Settings:</strong> 
              <span x-text="animation"></span> animation, 
              <span x-text="stagger"></span>s stagger, 
              <span x-text="duration"></span>s duration
            </p>
          </div>
        </div>
      </div>
    </Card>

    <!-- Performance Note -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Performance & GSAP Loading</h2>
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <span class="text-amber-500 text-lg">‚ö†Ô∏è</span>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-amber-800">GSAP Auto-Loading</h3>
              <div class="mt-2 text-sm text-amber-700">
                <p>This component automatically loads GSAP from CDN when needed. For production, consider:</p>
                <ul class="list-disc list-inside mt-2 space-y-1">
                  <li>Self-hosting GSAP for better performance</li>
                  <li>Loading GSAP once globally if using multiple animations</li>
                  <li>Using only necessary GSAP plugins</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">All animation types</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Timing controls</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">GSAP auto-loading</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Character animation</p>
          </div>
        </div>
      </div>
    </Card>
  </main>
</Layout>