---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';

// Get all Pine component names from the directory structure
const components = [
  // Basic Components
  'Accordion', 'Alert', 'Badge', 'Banner', 'Card', 'Quotes', 'Table',
  // Form Components  
  'Button', 'Checkbox', 'DatePicker', 'RadioGroup', 'RangeSlider', 'Rating', 'Select', 'Switch', 'TextInput', 'Textarea',
  // Navigation Components
  'Breadcrumbs', 'Dropdown', 'MenuBar', 'Modal', 'NavigationMenu', 'Pagination', 'Tabs',
  // Interactive Components
  'Command', 'ContextMenu', 'FullScreenModal', 'HoverCard', 'Popover', 'SlideOver', 'Toast',
  // Animation Components
  'Marquee', 'Progress', 'RetroGrid', 'TextAnimation', 'TypingEffect',
  // Media Components
  'ImageGallery', 'VideoPlayer',
  // Utility Components
  'CopyToClipboard', 'MonacoEditor', 'Tooltip'
];
---

<Layout title="Pine Components Showcase">
  <!-- Navigation in upper right -->
  <div class="fixed top-4 right-4 z-50">
    <Button href="../../" variant="solid" color="neutral" size="sm">Back to Home</Button>
  </div>

  <main class="w-full px-8 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-4">Pine UI Components Showcase</h1>
      <p class="text-xl text-gray-600 mb-6">
        Interactive showcase for all {components.length} Pine UI components
      </p>
      <div class="flex justify-center gap-2 mb-6">
        <Badge class="bg-black text-white">{components.length} Components</Badge>
        <Badge class="bg-black text-white">Alpine.js</Badge>
        <Badge class="bg-black text-white">HTMX</Badge>
      </div>
    </div>

    <!-- Component Grid -->
    <div class="flex justify-center">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 max-w-7xl">
      {components.map((component) => (
        <Card class="hover:shadow-lg transition-shadow">
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-2">{component}</h3>
            <p class="text-gray-600 text-sm mb-4">View the {component} component</p>
            <Button 
              href={`./${component.toLowerCase()}`} 
              variant="solid" 
              color="neutral" 
              size="sm"
              class="w-full"
            >
              View {component}
            </Button>
          </div>
        </Card>
      ))}
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-12 text-center">
      <Card>
        <div class="p-6">
          <h2 class="text-2xl font-bold mb-4">Quick Actions</h2>
          <div class="flex flex-wrap justify-center gap-4 mb-6">
            <Button href="./all" variant="solid" color="neutral">View All Components</Button>
            <Button href="./quick-test" variant="solid" color="neutral">Quick View</Button>
            <Button href="./advanced-test" variant="solid" color="neutral">Advanced View</Button>
            <Button href="../demo" variant="outline" color="neutral">Original Demo</Button>
          </div>
          
          <!-- Test Status -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
            <div class="text-center p-3 bg-green-50 rounded-lg">
              <Badge class="bg-black text-white mb-1">âœ“ 25 Components</Badge>
              <p class="text-xs text-gray-600">Complete showcase pages</p>
            </div>
            <div class="text-center p-3 bg-blue-50 rounded-lg">
              <Badge class="bg-black text-white mb-1">~ 11 Basic</Badge>
              <p class="text-xs text-gray-600">Simple components</p>
            </div>
            <div class="text-center p-3 bg-yellow-50 rounded-lg">
              <Badge class="bg-black text-white mb-1">âš¡ 8 Advanced</Badge>
              <p class="text-xs text-gray-600">Complex features</p>
            </div>
            <div class="text-center p-3 bg-purple-50 rounded-lg">
              <Badge class="bg-black text-white mb-1">ðŸŽ¨ Alpine.js</Badge>
              <p class="text-xs text-gray-600">Interactive components</p>
            </div>
          </div>
        </div>
      </Card>
    </div>

  </main>
</Layout>