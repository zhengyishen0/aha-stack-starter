---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
---

<Layout title="Button Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Button Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Variants Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Variants</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Solid</h3>
            <div class="space-y-3">
              <Button variant="solid" color="neutral" class="w-full">Neutral</Button>
              <Button variant="solid" color="blue" class="w-full">Blue</Button>
              <Button variant="solid" color="red" class="w-full">Red</Button>
              <Button variant="solid" color="green" class="w-full">Green</Button>
              <Button variant="solid" color="yellow" class="w-full">Yellow</Button>
              <Button variant="solid" color="purple" class="w-full">Purple</Button>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Outline</h3>
            <div class="space-y-3">
              <Button variant="outline" color="neutral" class="w-full">Neutral</Button>
              <Button variant="outline" color="blue" class="w-full">Blue</Button>
              <Button variant="outline" color="red" class="w-full">Red</Button>
              <Button variant="outline" color="green" class="w-full">Green</Button>
              <Button variant="outline" color="yellow" class="w-full">Yellow</Button>
              <Button variant="outline" color="purple" class="w-full">Purple</Button>
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Soft</h3>
            <div class="space-y-3">
              <Button variant="soft" color="neutral" class="w-full">Neutral</Button>
              <Button variant="soft" color="blue" class="w-full">Blue</Button>
              <Button variant="soft" color="red" class="w-full">Red</Button>
              <Button variant="soft" color="green" class="w-full">Green</Button>
              <Button variant="soft" color="yellow" class="w-full">Yellow</Button>
              <Button variant="soft" color="purple" class="w-full">Purple</Button>
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-3">Ghost</h3>
            <div class="space-y-3">
              <Button variant="ghost" color="neutral" class="w-full">Neutral</Button>
              <Button variant="ghost" color="blue" class="w-full">Blue</Button>
              <Button variant="ghost" color="red" class="w-full">Red</Button>
              <Button variant="ghost" color="green" class="w-full">Green</Button>
              <Button variant="ghost" color="yellow" class="w-full">Yellow</Button>
              <Button variant="ghost" color="purple" class="w-full">Purple</Button>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Sizes Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Sizes</h2>
        <div class="flex flex-wrap items-center gap-4">
          <Button variant="solid" color="blue" size="sm">Small</Button>
          <Button variant="solid" color="blue" size="md">Medium</Button>
          <Button variant="solid" color="blue" size="lg">Large</Button>
          <Button variant="solid" color="blue" size="xl">Extra Large</Button>
        </div>
      </div>
    </Card>

    <!-- States Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">States</h2>
        <div class="flex flex-wrap gap-4">
          <Button variant="solid" color="blue">Normal</Button>
          <Button variant="solid" color="blue" disabled>Disabled</Button>
          <Button variant="outline" color="green">Normal Outline</Button>
          <Button variant="outline" color="green" disabled>Disabled Outline</Button>
        </div>
      </div>
    </Card>

    <!-- Types Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Button Types</h2>
        <div class="space-y-4">
          <div class="flex gap-4">
            <Button type="button" variant="solid" color="blue">Button</Button>
            <Button type="submit" variant="solid" color="green">Submit</Button>
            <Button type="reset" variant="outline" color="red">Reset</Button>
          </div>
          
          <div class="flex gap-4">
            <Button href="/test" variant="soft" color="purple">Link Button</Button>
            <Button href="https://example.com" target="_blank" variant="ghost" color="neutral">External Link</Button>
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Test</h2>
        <div class="space-y-4">
          <div x-data="{ count: 0 }">
            <p class="mb-3">Alpine.js Counter: <span x-text="count" class="font-bold"></span></p>
            <div class="flex gap-2">
              <Button 
                variant="solid" 
                color="green" 
                x-on:click="count++"
              >
                Increment +
              </Button>
              <Button 
                variant="outline" 
                color="red" 
                x-on:click="count--"
              >
                Decrement -
              </Button>
              <Button 
                variant="soft" 
                color="neutral" 
                x-on:click="count = 0"
              >
                Reset
              </Button>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Custom Styling Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styling</h2>
        <div class="space-y-4">
          <Button 
            variant="solid" 
            color="blue" 
            class="shadow-lg transform hover:scale-105 transition-transform"
          >
            Custom Hover Effect
          </Button>
          
          <Button 
            variant="outline" 
            color="purple" 
            class="rounded-full px-8"
          >
            Rounded Button
          </Button>
          
          <Button 
            variant="soft" 
            color="green" 
            class="w-full text-center"
          >
            Full Width Button
          </Button>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All variants render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All sizes working</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Alpine.js integration</p>
          </div>
        </div>
      </div>
    </Card>
  </main>
</Layout>