---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Alert from '../../components/pine/Alert.astro';
import Badge from '../../components/pine/Badge.astro';
---

<Layout title="Alert Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Alert Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Variants Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic Variants</h2>
        <div class="space-y-4">
          <Alert variant="default">
            This is a default alert message. It provides neutral information to the user.
          </Alert>
          
          <Alert variant="blue" title="Information">
            This is an informational alert with a title. It highlights important details.
          </Alert>
          
          <Alert variant="green" title="Success">
            This is a success alert. Your action has been completed successfully.
          </Alert>
          
          <Alert variant="yellow" title="Warning">
            This is a warning alert. Please pay attention to this message.
          </Alert>
          
          <Alert variant="red" title="Error">
            This is an error alert. Something went wrong and needs your attention.
          </Alert>
        </div>
      </div>
    </Card>

    <!-- Soft Variants Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Soft Variants</h2>
        <div class="space-y-4">
          <Alert variant="soft-blue" title="Soft Information">
            This is a soft blue alert with reduced visual impact but clear information.
          </Alert>
          
          <Alert variant="soft-green" title="Soft Success">
            This is a soft green alert for success messages that don't need high contrast.
          </Alert>
          
          <Alert variant="soft-yellow" title="Soft Warning">
            This is a soft yellow alert for warnings that are less critical.
          </Alert>
          
          <Alert variant="soft-red" title="Soft Error">
            This is a soft red alert for errors that need attention but aren't critical.
          </Alert>
        </div>
      </div>
    </Card>

    <!-- Dismissible Alerts -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Dismissible Alerts</h2>
        <div class="space-y-4">
          <Alert variant="blue" title="Dismissible Info" dismissible={true}>
            This alert can be dismissed by clicking the X button. Once dismissed, it will disappear from the page.
          </Alert>
          
          <Alert variant="green" title="Dismissible Success" dismissible={true}>
            Great job! This success message can be dismissed when you're ready to move on.
          </Alert>
          
          <Alert variant="yellow" title="Dismissible Warning" dismissible={true}>
            This warning can be dismissed, but make sure you've read and understood it first.
          </Alert>
          
          <Alert variant="red" title="Dismissible Error" dismissible={true}>
            This error message can be dismissed once you've addressed the issue.
          </Alert>
        </div>
      </div>
    </Card>

    <!-- Alerts with Icons -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Alerts with Custom Icons</h2>
        <div class="space-y-4">
          <Alert 
            variant="soft-blue" 
            title="Information"
            icon="<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'></path>"
          >
            This alert includes a custom information icon to enhance visual communication.
          </Alert>
          
          <Alert 
            variant="soft-green" 
            title="Success"
            icon="<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>"
          >
            This success alert has a checkmark icon to reinforce the positive message.
          </Alert>
          
          <Alert 
            variant="soft-yellow" 
            title="Warning"
            icon="<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z'></path>"
          >
            This warning alert includes a warning triangle icon for clear visual indication.
          </Alert>
          
          <Alert 
            variant="soft-red" 
            title="Error"
            icon="<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'></path>"
            dismissible={true}
          >
            This error alert combines an icon with dismissible functionality for maximum usability.
          </Alert>
        </div>
      </div>
    </Card>

    <!-- Interactive Demo -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Demo</h2>
        <div x-data="{ 
          showAlert: false, 
          alertVariant: 'blue', 
          alertTitle: 'Dynamic Alert',
          alertMessage: 'This alert was created dynamically!',
          alertDismissible: true
        }">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Variant</label>
              <select x-model="alertVariant" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="default">Default</option>
                <option value="blue">Blue</option>
                <option value="green">Green</option>
                <option value="yellow">Yellow</option>
                <option value="red">Red</option>
                <option value="soft-blue">Soft Blue</option>
                <option value="soft-green">Soft Green</option>
                <option value="soft-yellow">Soft Yellow</option>
                <option value="soft-red">Soft Red</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
              <input x-model="alertTitle" type="text" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            </div>
          </div>
          
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
            <textarea x-model="alertMessage" rows="2" class="w-full border border-gray-300 rounded-md px-3 py-2"></textarea>
          </div>
          
          <div class="flex items-center gap-4 mb-6">
            <label class="flex items-center">
              <input x-model="alertDismissible" type="checkbox" class="mr-2" />
              Dismissible
            </label>
            
            <Button @click="showAlert = true" variant="solid" color="blue">Show Alert</Button>
            <Button @click="showAlert = false" variant="outline" color="neutral">Hide Alert</Button>
          </div>
          
          <!-- Dynamic Alert Display -->
          <div x-show="showAlert" x-transition>
            <Alert 
              :variant="alertVariant"
              :title="alertTitle"
              :dismissible="alertDismissible"
              x-text="alertMessage"
            >
            </Alert>
          </div>
        </div>
      </div>
    </Card>

    <!-- Custom Styling Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styling</h2>
        <div class="space-y-4">
          <Alert 
            variant="blue"
            title="Custom Rounded"
            class="rounded-xl shadow-lg"
          >
            This alert has custom border radius and shadow styling.
          </Alert>
          
          <Alert 
            variant="soft-green"
            title="Custom Border"
            class="border-l-4 border-green-500"
          >
            This alert has a custom left border accent.
          </Alert>
          
          <Alert 
            variant="soft-yellow"
            title="Custom Animation"
            class="transform hover:scale-105 transition-transform"
          >
            This alert has a hover animation effect.
          </Alert>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All variants render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Dismissible functionality</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Custom icons support</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Alpine.js integration</p>
          </div>
        </div>
      </div>
    </Card>
  </main>
</Layout>