---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import HoverCard from '../../components/pine/HoverCard.astro';
---

<Layout title="HoverCard Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">HoverCard Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">‚Üê Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Positioning Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Positioning Options</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <!-- Top Positions -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Top</h3>
            <div class="space-y-4">
              <HoverCard content="This card appears on top" position="top">
                <Button variant="solid" color="blue">Top</Button>
              </HoverCard>
              <HoverCard content="Top start position" position="top-start">
                <Button variant="soft" color="blue" size="sm">Top-Start</Button>
              </HoverCard>
              <HoverCard content="Top end position" position="top-end">
                <Button variant="soft" color="blue" size="sm">Top-End</Button>
              </HoverCard>
            </div>
          </div>
          
          <!-- Right Positions -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Right</h3>
            <div class="space-y-4">
              <HoverCard content="This card appears on the right" position="right">
                <Button variant="solid" color="green">Right</Button>
              </HoverCard>
              <HoverCard content="Right start position" position="right-start">
                <Button variant="soft" color="green" size="sm">Right-Start</Button>
              </HoverCard>
              <HoverCard content="Right end position" position="right-end">
                <Button variant="soft" color="green" size="sm">Right-End</Button>
              </HoverCard>
            </div>
          </div>

          <!-- Bottom Positions -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Bottom</h3>
            <div class="space-y-4">
              <HoverCard content="This card appears on bottom" position="bottom">
                <Button variant="solid" color="purple">Bottom</Button>
              </HoverCard>
              <HoverCard content="Bottom start position" position="bottom-start">
                <Button variant="soft" color="purple" size="sm">Bottom-Start</Button>
              </HoverCard>
              <HoverCard content="Bottom end position" position="bottom-end">
                <Button variant="soft" color="purple" size="sm">Bottom-End</Button>
              </HoverCard>
            </div>
          </div>

          <!-- Left Positions -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Left</h3>
            <div class="space-y-4">
              <HoverCard content="This card appears on the left" position="left">
                <Button variant="solid" color="red">Left</Button>
              </HoverCard>
              <HoverCard content="Left start position" position="left-start">
                <Button variant="soft" color="red" size="sm">Left-Start</Button>
              </HoverCard>
              <HoverCard content="Left end position" position="left-end">
                <Button variant="soft" color="red" size="sm">Left-End</Button>
              </HoverCard>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Hover Delays Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Hover Triggers and Delays</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Instant (0ms delay)</h3>
            <HoverCard content="Appears instantly on hover" showDelay={0} hideDelay={0}>
              <Button variant="soft" color="blue">Instant</Button>
            </HoverCard>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Medium (500ms delay)</h3>
            <HoverCard content="Appears after 500ms delay" showDelay={500} hideDelay={300}>
              <Button variant="soft" color="yellow">500ms delay</Button>
            </HoverCard>
          </div>

          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Long (1s delay)</h3>
            <HoverCard content="Appears after 1 second delay" showDelay={1000} hideDelay={500}>
              <Button variant="soft" color="purple">1s delay</Button>
            </HoverCard>
          </div>
        </div>
      </div>
    </Card>

    <!-- Rich Content Display Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Rich Content Display</h2>
        <div class="space-y-6">
          <!-- Profile Card Example -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Profile Card</h3>
            <HoverCard position="bottom" maxWidth="280px">
              <Button variant="outline" color="blue">
                <span class="inline-flex items-center gap-2">
                  <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=32&h=32&fit=crop&crop=face" 
                       alt="User" class="w-6 h-6 rounded-full" />
                  John Doe
                </span>
              </Button>
              
              <div slot="card">
                <div class="p-4">
                  <div class="flex items-center gap-3 mb-3">
                    <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=48&h=48&fit=crop&crop=face" 
                         alt="John Doe" class="w-12 h-12 rounded-full" />
                    <div>
                      <h3 class="font-semibold text-lg">John Doe</h3>
                      <p class="text-gray-600 text-sm">Senior Developer</p>
                    </div>
                  </div>
                  <p class="text-gray-700 text-sm mb-3">
                    Full-stack developer with 8+ years of experience in React, Node.js, and cloud technologies.
                  </p>
                  <div class="flex gap-2">
                    <Button size="sm" color="blue">Follow</Button>
                    <Button size="sm" variant="outline" color="neutral">Message</Button>
                  </div>
                </div>
              </div>
            </HoverCard>
          </div>

          <!-- Info Card with Image -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Product Info Card</h3>
            <HoverCard position="top" maxWidth="320px">
              <Button variant="ghost" color="green">
                üì± iPhone 15 Pro
              </Button>
              
              <div slot="card">
                <div>
                  <img src="https://images.unsplash.com/photo-1510557880182-3d4d3cba35a5?w=320&h=160&fit=crop" 
                       alt="iPhone" class="w-full h-32 object-cover" />
                  <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">iPhone 15 Pro</h3>
                    <p class="text-gray-600 text-sm mb-3">
                      The most advanced iPhone yet with titanium design and A17 Pro chip.
                    </p>
                    <div class="flex items-center justify-between">
                      <span class="text-xl font-bold text-blue-600">$999</span>
                      <Button size="sm" color="blue">View Details</Button>
                    </div>
                  </div>
                </div>
              </div>
            </HoverCard>
          </div>

          <!-- Feature Preview -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Feature Preview</h3>
            <HoverCard position="right" maxWidth="300px">
              <span class="text-blue-600 underline cursor-help">
                ‚ú® New Feature
              </span>
              
              <div slot="card">
                <div class="p-4">
                  <div class="flex items-center gap-2 mb-3">
                    <Badge color="green">New</Badge>
                    <h3 class="font-semibold">Dark Mode</h3>
                  </div>
                  <p class="text-gray-600 text-sm mb-3">
                    Switch between light and dark themes with automatic system detection.
                  </p>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2 text-sm">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span>Automatic detection</span>
                    </div>
                    <div class="flex items-center gap-2 text-sm">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span>Manual toggle</span>
                    </div>
                    <div class="flex items-center gap-2 text-sm">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span>Persistent preference</span>
                    </div>
                  </div>
                </div>
              </div>
            </HoverCard>
          </div>
        </div>
      </div>
    </Card>

    <!-- Custom Styling Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styling</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Custom Card Style</h3>
            <HoverCard 
              content="Custom blue card with larger padding" 
              position="top"
              cardClass="bg-blue-50 border-blue-200 p-6"
            >
              <Button variant="outline" color="blue">Blue Card</Button>
            </HoverCard>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">No Arrow</h3>
            <HoverCard 
              content="Card without arrow indicator" 
              position="top"
              showArrow={false}
            >
              <Button variant="outline" color="purple">No Arrow</Button>
            </HoverCard>
          </div>

          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Custom Width</h3>
            <HoverCard 
              content="This card has a very wide maximum width to demonstrate how content can span across a larger area when needed" 
              position="top"
              maxWidth="400px"
            >
              <Button variant="outline" color="green">Wide Card</Button>
            </HoverCard>
          </div>
        </div>
      </div>
    </Card>

    <!-- Trigger Options Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Trigger Options</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Hover Trigger (Default)</h3>
            <div class="space-y-4">
              <HoverCard content="Triggered by hover" openOnHover={true} openOnClick={false}>
                <Button variant="soft" color="blue">Hover Only</Button>
              </HoverCard>
            </div>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-4">Click Trigger</h3>
            <div class="space-y-4">
              <HoverCard content="Triggered by click" openOnHover={false} openOnClick={true}>
                <Button variant="soft" color="green">Click to Toggle</Button>
              </HoverCard>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Different Trigger Elements -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Different Trigger Elements</h2>
        <div class="space-y-6">
          <div class="flex flex-wrap items-center gap-4">
            <HoverCard content="Button hover card" position="top">
              <Button variant="solid" color="blue">Button</Button>
            </HoverCard>
            
            <HoverCard content="Badge hover card" position="top">
              <Badge color="green">Hover Badge</Badge>
            </HoverCard>
            
            <HoverCard content="Text element hover card" position="top">
              <span class="px-3 py-2 bg-gray-100 rounded cursor-help">Text Element</span>
            </HoverCard>
            
            <HoverCard content="Link hover card" position="top">
              <a href="#" class="text-blue-600 hover:text-blue-800 underline">Hover Link</a>
            </HoverCard>

            <HoverCard content="Image hover card" position="top">
              <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face" 
                   alt="Hover me" class="w-10 h-10 rounded-full cursor-help" />
            </HoverCard>
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Examples</h2>
        <div class="space-y-6">
          <!-- Dynamic Content -->
          <div x-data="{ timestamp: new Date().toLocaleTimeString(), updateTime() { this.timestamp = new Date().toLocaleTimeString(); } }">
            <h3 class="text-lg font-semibold mb-4">Dynamic Content</h3>
            <div class="flex items-center gap-4">
              <HoverCard x-bind:content="`Last updated: ${timestamp}`" position="top">
                <Button variant="solid" color="blue" x-on:click="updateTime()">
                  Update Time
                </Button>
              </HoverCard>
              <span class="text-sm text-gray-600" x-text="timestamp"></span>
            </div>
          </div>

          <!-- Nested Cards -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Multiple Cards Grid</h3>
            <div class="grid grid-cols-4 gap-2 max-w-md mx-auto">
              <HoverCard content="Card 1" position="top">
                <Button variant="soft" color="blue" size="sm">1</Button>
              </HoverCard>
              <HoverCard content="Card 2" position="top">
                <Button variant="soft" color="green" size="sm">2</Button>
              </HoverCard>
              <HoverCard content="Card 3" position="top">
                <Button variant="soft" color="purple" size="sm">3</Button>
              </HoverCard>
              <HoverCard content="Card 4" position="top">
                <Button variant="soft" color="red" size="sm">4</Button>
              </HoverCard>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">All 12 positions render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Hover delays functional</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Rich content slots</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Custom styling options</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Trigger options</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Profile cards use case</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Info cards use case</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Alpine.js integration</p>
          </div>
        </div>
        
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <h3 class="font-semibold text-blue-800 mb-2">Testing Notes:</h3>
          <ul class="text-sm text-blue-700 space-y-1">
            <li>‚Ä¢ Hover over elements to test card appearance with configurable delays</li>
            <li>‚Ä¢ Test all 12 positioning options (top/right/bottom/left with start/end variants)</li>
            <li>‚Ä¢ Verify rich content display with images, text, and interactive elements</li>
            <li>‚Ä¢ Check custom styling options including arrow visibility and card styling</li>
            <li>‚Ä¢ Test both hover and click trigger modes</li>
            <li>‚Ä¢ Verify Alpine.js reactive updates with dynamic content</li>
            <li>‚Ä¢ Test profile card and info card use cases with real-world content</li>
          </ul>
        </div>
      </div>
    </Card>
  </main>
</Layout>