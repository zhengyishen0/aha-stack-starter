---
// Import component styles
import '/src/styles/components/section.css';

export interface Props {
  class?: string;
  [key: string]: any; // Allow any Alpine.js attributes
}

const {
  class: className = '',
  ...rest
} = Astro.props;

// Generate class names
const getSectionClasses = () => {
  return `section ${className}`.trim();
};
---

<section 
  class={getSectionClasses()}
  {...rest}
>
  <slot />
</section>