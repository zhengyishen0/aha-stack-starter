---
import { cn } from '@/lib/utils';

export interface Props {
  // Layout
  align?: 'start' | 'center' | 'end' | 'stretch';
  justify?: 'start' | 'center' | 'end' | 'between' | 'around' | 'evenly';
  gap?: '1' | '2' | '3' | '4' | '6' | '8';
  
  // Sizing
  height?: 'auto' | 'full' | 'screen' | 'fit';
  width?: 'auto' | 'full' | 'fit';
  
  // Visual styling
  padding?: '2' | '3' | '4' | '6' | '8';
  
  class?: string;
  [key: string]: any; // Alpine.js pass-through
}

const {
  align = 'stretch',
  justify = 'start',
  gap = '4',
  height = 'auto',
  width = 'auto',
  padding = '0',
  class: className = '',
  ...rest
} = Astro.props;

const classes = cn(
  // Base column layout
  'flex flex-col',
  
  // Alignment
  `items-${align}`,
  `justify-${justify}`,
  
  // Spacing
  `gap-${gap}`,
  padding !== '0' && `p-${padding}`,
  
  // Sizing
  height === 'full' && 'h-full',
  height === 'screen' && 'h-screen',
  height === 'fit' && 'h-fit',
  width === 'full' && 'w-full',
  width === 'fit' && 'w-fit',
  
  className
);
---


<div class={classes} {...rest}>
  <slot />
</div>