---
export interface Props {
  condition: string; // Alpine.js expression to evaluate
  class?: string;
  [key: string]: any; // Allow any Alpine.js attributes
}

const {
  condition,
  class: className = '',
  ...rest
} = Astro.props;
---

<div 
  class={className}
  {...rest}
>
  <!-- True case slot -->
  <div x-show={condition}>
    <slot name="true" />
  </div>
  
  <!-- False case slot -->
  <div x-show={`!(${condition})`}>
    <slot name="false" />
  </div>
</div>