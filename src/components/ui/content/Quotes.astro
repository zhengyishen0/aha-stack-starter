---
export interface Props {
  quote: string;
  author: string;
  role?: string;
  company?: string;
  avatar?: string;
  variant?: 'default' | 'centered' | 'minimal';
  context?: 'default' | 'testimonial' | 'hero';
  class?: string;
  [key: string]: any; // Allow any Alpine.js attributes
}

const { 
  quote,
  author,
  role,
  company,
  avatar,
  variant = 'default',
  context = 'default',
  class: className = "",
  ...rest
} = Astro.props;

// Generate class names using true design system
const getComponentClasses = () => {
  const baseClass = 'quote';
  const contextClass = context !== 'default' ? `${context}-quote` : '';
  return `${baseClass} ${contextClass}`.trim();
};

const getQuoteTextClasses = () => {
  return 'quote-text';
};

const getQuoteAuthorClasses = () => {
  return 'quote-author';
};

const getQuoteIconClasses = () => {
  return 'quote-icon';
};

const getQuoteFooterClasses = () => {
  return 'quote-footer';
};

const getQuoteAttributionClasses = () => {
  return 'quote-attribution';
};
---

<!-- 
Pine UI Quotes Component

Usage:
<Quotes 
  quote="This is an amazing product that has transformed our workflow."
  author="John Doe"
  role="CEO"
  company="Acme Corp"
  avatar="/path/to/avatar.jpg"
  variant="centered"
  size="lg"
/>

Props:
- quote: The quote text (required)
- author: Author name (required)
- role: Author's job title (optional)
- company: Author's company (optional)
- avatar: URL to author's avatar image (optional)
- variant: Layout style - 'default', 'centered', 'minimal'
- size: Text size - 'sm', 'md', 'lg'
- class: Additional CSS classes
-->

<blockquote 
  class={`${getComponentClasses()} ${className}`}
  data-variant={variant !== 'default' ? variant : null}
  {...rest}
>
  {variant !== 'minimal' && (
    <svg class={getQuoteIconClasses()} fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
  )}
  
  <p class={getQuoteTextClasses()}>
    "{quote}"
  </p>
  
  <footer class={getQuoteFooterClasses()}>
    {avatar && (
      <img 
        class="quote-avatar"
        src={avatar}
        alt={`${author} avatar`}
        loading="lazy"
      />
    )}
    
    <div class={getQuoteAttributionClasses()}>
      <cite class={getQuoteAuthorClasses()}>
        {author}
      </cite>
      {(role || company) && (
        <p class="quote-role">
          {role && role}{role && company && ', '}{company && company}
        </p>
      )}
    </div>
  </footer>
</blockquote>