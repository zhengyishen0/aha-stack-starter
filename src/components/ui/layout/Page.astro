---
import { cn } from '@/lib/utils';
import { createLayoutComponent, type LayoutComponentProps, type VariantProps } from '@/lib/component-variants';

const pageVariants = createLayoutComponent(
  'min-h-screen w-full',
  {
    maxWidth: {
      full: 'w-full',
      narrow: 'max-w-2xl mx-auto',
      container: 'max-w-7xl mx-auto', 
      wide: 'max-w-screen-xl mx-auto'
    },
    overflow: {
      shrink: 'flex-shrink',
      extend: 'flex-shrink-0'
    }
  }
);

export interface Props extends LayoutComponentProps, VariantProps<typeof pageVariants> {
  maxWidth?: 'full' | 'narrow' | 'container' | 'wide';
  overflow?: 'shrink' | 'extend';
}

const { 
  maxWidth = 'container',
  justify,
  align,
  overflow = 'shrink',
  class: className = '',
  ...rest
} = Astro.props;

const classes = cn(
  pageVariants({ maxWidth, justify, align, overflow }),
  className
);
---

<div class={classes} {...rest}>
  <slot />
</div>