---
import { cn } from '@/lib/utils';

export interface Props {
  tag?: 'section' | 'div' | 'article' | 'aside';
  align?: 'left' | 'center' | 'right';
  class?: string;
  [key: string]: any; // Alpine.js pass-through
}

const {
  tag = 'section',
  align = 'center',
  class: className = '',
  ...alpineProps
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};

const classes = cn('p-8', alignClasses[align], className);

const Tag = tag;
---

<Tag class={classes} {...alpineProps}>
  <slot />
</Tag>