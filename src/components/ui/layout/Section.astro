---
import { cn } from '@/lib/utils';

export interface Props {
  tag?: 'section' | 'div' | 'article' | 'aside';
  class?: string;
  [key: string]: any; // Alpine.js pass-through
}

const {
  tag = 'section',
  class: className = '',
  ...alpineProps
} = Astro.props;

const classes = cn('p-8', className);

const Tag = tag;
---

<Tag class={classes} {...alpineProps}>
  <slot />
</Tag>