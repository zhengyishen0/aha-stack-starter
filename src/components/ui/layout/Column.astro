---
import { cn } from '@/lib/utils';
import { createLayoutComponent, type LayoutComponentProps, type VariantProps } from '@/lib/component-variants';

const columnVariants = createLayoutComponent(
  'flex flex-col',
  {
    height: {
      auto: '',
      full: 'h-full',
      screen: 'h-screen',
      fit: 'h-fit'
    },
    width: {
      auto: '',
      full: 'w-full', 
      fit: 'w-fit'
    }
  }
);

export interface Props extends LayoutComponentProps, VariantProps<typeof columnVariants> {
  height?: 'auto' | 'full' | 'screen' | 'fit';
  width?: 'auto' | 'full' | 'fit';
}

const {
  align = 'stretch',
  justify = 'start',
  gap = 'md',
  padding = 'none',
  height = 'auto',
  width = 'auto',
  class: className = '',
  ...rest
} = Astro.props;

const classes = cn(
  columnVariants({ align, justify, gap, padding, height, width }),
  className
);
---


<div class={classes} {...rest}>
  <slot />
</div>