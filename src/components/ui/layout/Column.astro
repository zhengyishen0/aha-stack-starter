---
import { cn } from '@/lib/utils';
import {
    createLayoutComponent,
    type LayoutComponentProps,
    universalVariants,
} from '@/lib/component-variants';

const columnVariants = createLayoutComponent('flex flex-col h-full', {
    overflow: {
        shrink: universalVariants.overflow.shrink, // Default flex shrink
        extend: universalVariants.overflow.extend, // Content extends beyond container
    },
});

export interface Props extends LayoutComponentProps {
    overflow?: 'shrink' | 'extend';
}

const {
    align = 'center',
    justify = 'start',
    overflow = 'shrink',
    class: className = '',
    ...alpineProps
} = Astro.props;

const classes = cn(columnVariants({ align, justify, overflow }), className);
---

<div class={classes} {...alpineProps}>
    <slot />
</div>
