---
import { cn } from '@/lib/utils';
import {
    createLayoutComponent,
    type LayoutComponentProps,
    universalVariants,
    type UniversalSpacing,
    type UniversalLayoutSize
} from '@/lib/component-variants';

const columnVariants = createLayoutComponent('flex flex-col', {
    overflow: {
        auto: universalVariants.overflow.auto,     // Content scrolls when needed
        fixed: universalVariants.overflow.fixed,   // Content has fixed boundaries
    },
});

export interface Props extends LayoutComponentProps {
    overflow?: 'auto' | 'fixed';
    gap?: UniversalSpacing;
    size?: UniversalLayoutSize;
}

const {
    align = 'center',
    justify = 'start',
    overflow = 'fixed',
    gap = 'md',
    size = 'height',
    class: className = '',
    ...alpineProps
} = Astro.props;

const overflowClasses = {
    auto: 'overflow-auto',
    fixed: 'overflow-hidden'
};

const classes = cn(
    'flex flex-col',
    size === 'fit' ? 'h-auto' : '',
    columnVariants({ align, justify }),
    overflowClasses[overflow],
    universalVariants.gap[gap],
    universalVariants.layoutSize[size],
    className
);
---

<div class={classes} {...alpineProps}>
    <slot />
</div>
