---
import { cn } from '@/lib/utils';
import { createContentComponent, type ContentComponentProps, type VariantProps, universalVariants } from '@/lib/component-variants';

const gridVariants = createContentComponent(
  'grid',
  {
    columns: {
      auto: 'grid-cols-[repeat(auto-fit,minmax(280px,1fr))] md:grid-cols-[repeat(auto-fit,minmax(280px,1fr))]',
      1: 'grid-cols-1',
      2: 'grid-cols-1 md:grid-cols-2', 
      3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
      4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
      5: 'grid-cols-1 md:grid-cols-3 lg:grid-cols-5',
      6: 'grid-cols-2 md:grid-cols-4 lg:grid-cols-6',
      12: 'grid-cols-4 md:grid-cols-8 lg:grid-cols-12'
    },
    overflow: {
      scroll: universalVariants.overflow.scroll, // Both directions for grid
      extend: universalVariants.overflow.extend, // Content spills out
    }
  }
);

export interface Props extends ContentComponentProps, VariantProps<typeof gridVariants> {
  columns?: 'auto' | '1' | '2' | '3' | '4' | '5' | '6' | '12';
  overflow?: 'scroll' | 'extend';
}

const { 
  columns = 'auto',
  gap,
  overflow = 'scroll',
  class: className = '',
  ...alpineProps
} = Astro.props;

const classes = cn(
  gridVariants({ columns, gap, overflow }),
  className
);
---

<div class={classes} {...alpineProps}>
  <slot />
</div>