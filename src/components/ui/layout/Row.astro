---
import { cn } from '@/lib/utils';
import {
    createLayoutComponent,
    type LayoutComponentProps,
    type VariantProps,
    universalVariants
} from '@/lib/component-variants';

const rowVariants = createLayoutComponent('flex flex-row w-fit', {
    overflow: {
        shrink: universalVariants.overflow.shrink,  // Default flex shrink
        wrap: universalVariants.overflow.wrap,      // Wrap to new rows
    }
});

export interface Props
    extends LayoutComponentProps,
        VariantProps<typeof rowVariants> {
    overflow?: 'shrink' | 'wrap';
}

const {
    justify = 'start',
    align = 'center',
    overflow = 'shrink',
    class: className = '',
    ...alpineProps
} = Astro.props;

const classes = cn(
    rowVariants({
        justify,
        align,
        overflow,
    }),
    className
);
---

<div class={classes} {...alpineProps}>
    <slot />
</div>
