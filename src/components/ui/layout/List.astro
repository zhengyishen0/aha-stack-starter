---
import { cn } from '@/lib/utils';
import {
    createContentComponent,
    type ContentComponentProps,
    universalVariants
} from '@/lib/component-variants';

const listVariants = createContentComponent('flex flex-col items-stretch max-h-screen', {
    overflow: {
        scroll: universalVariants.overflow.scrollY, // Vertical scroll for lists
        extend: universalVariants.overflow.extend,  // Content spills out
    }
});

export interface Props extends ContentComponentProps {
    overflow?: 'scroll' | 'extend';
}

const {
    gap = 'xs',
    overflow = 'scroll',
    class: className = '',
    ...alpineProps
} = Astro.props;

const classes = cn(
    listVariants({ gap, overflow }),
    className
);
---

<div class={classes} {...alpineProps}>
    <slot />
</div>
