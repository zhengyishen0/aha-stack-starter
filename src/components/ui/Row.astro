---
// Import component styles
import '../../styles/components/row.css';

export interface Props {
  justify?: 'start' | 'center' | 'end' | 'between' | 'around' | 'evenly';
  align?: 'start' | 'center' | 'end' | 'stretch' | 'baseline';
  gap?: 'tight' | 'default' | 'loose' | 'none';
  wrap?: boolean;
  class?: string;
}

const { 
  justify = 'start',
  align = 'center',
  gap = 'default',
  wrap = false,
  class: className = "",
  ...rest
} = Astro.props;

// Generate class names using true design system
const getRowClasses = () => {
  const baseClass = 'row';
  const justifyClass = justify !== 'start' ? `row-justify-${justify}` : '';
  const alignClass = align !== 'center' ? `row-align-${align}` : '';
  const gapClass = gap !== 'default' ? `row-gap-${gap}` : '';
  const wrapClass = wrap ? 'row-wrap' : '';
  
  return `${baseClass} ${justifyClass} ${alignClass} ${gapClass} ${wrapClass} ${className}`.trim();
};
---

<!-- 
TRUE Design System Row Component

Usage:
<Row>
  <div>Item 1</div>
  <div>Item 2</div>
</Row>

<Row justify="between" gap="loose">
  <div>Left side</div>
  <div>Right side</div>
</Row>

<Row justify="center" align="start" wrap>
  <Button>Filter 1</Button>
  <Button>Filter 2</Button>
  <Button>Filter 3</Button>
</Row>

Props:
- justify: start, center, end, between, around, evenly
- align: start, center, end, stretch, baseline
- gap: none, tight, default, loose
- wrap: boolean for flex-wrap
-->

<div class={getRowClasses()} {...rest}>
  <slot />
</div>