---
import { cn } from '@/lib/utils';

export interface Props {
    className?: string;
    // Alpine.js pass-through
    [key: string]: any;
}

const { className, ...alpineProps } = Astro.props;
---

<div
    class={cn(
        'flex flex-col gap-y-3 items-center px-6 py-2 pb-4 card-footer justify-end',
        className
    )}
    {...alpineProps}
>
    <slot />
</div>
