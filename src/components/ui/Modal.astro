---
export interface Props {
  id: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  closeable?: boolean;
  class?: string;
  backdropClass?: string;
}

const { 
  id,
  size = 'md',
  closeable = true,
  class: className = "",
  backdropClass = ""
} = Astro.props;

const getComponentClasses = () => {
  const baseClass = 'modal';
  const sizeClass = size ? `modal-${size}` : '';
  return `${baseClass} ${sizeClass}`.trim();
};

const getBackdropClasses = () => {
  return `modal-backdrop ${backdropClass}`.trim();
};
---

<!-- 
Pine UI Modal Component

Usage:
<Modal id="example-modal" size="md" closeable={true}>
  <div slot="trigger">
    <Button>Open Modal</Button>
  </div>
  
  <div slot="header">
    <h2>Modal Title</h2>
  </div>
  
  <div slot="body">
    <p>Modal content goes here...</p>
  </div>
  
  <div slot="footer">
    <Button variant="outline">Cancel</Button>
    <Button>Confirm</Button>
  </div>
</Modal>

Features:
- Multiple sizes
- Escape key to close
- Click outside to close
- Focus trapping
- Smooth transitions
- Alpine.js powered
-->

<div 
  x-data="{ modalOpen: false }"
  @keydown.escape.window="modalOpen = false"
>
  <!-- Trigger -->
  <div @click="modalOpen = true">
    <slot name="trigger" />
  </div>
  
  <!-- Modal -->
  <template x-teleport="body">
    <div 
      x-show="modalOpen" 
      x-transition.opacity.duration.200ms
      x-trap="modalOpen"
      class={getBackdropClasses()}
      @click.self={closeable ? "modalOpen = false" : ""}
    >
      <div 
        x-show="modalOpen"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class={`modal-content ${getComponentClasses()} ${className}`}
      >
        <!-- Header -->
        <div class="modal-header">
          <div>
            <slot name="header" />
          </div>
          {closeable && (
            <button 
              @click="modalOpen = false"
              class="modal-close"
              type="button"
            >
              <svg class="modal-close-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          )}
        </div>
        
        <!-- Body -->
        <div class="modal-body">
          <slot name="body" />
          <slot />
        </div>
        
        <!-- Footer -->
        <div class="modal-footer">
          <slot name="footer" />
        </div>
      </div>
    </div>
  </template>
</div>