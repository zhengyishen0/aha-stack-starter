---
export interface Props {
  id: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  closeable?: boolean;
  class?: string;
  backdropClass?: string;
}

const { 
  id,
  size = 'md',
  closeable = true,
  class: className = "",
  backdropClass = ""
} = Astro.props;

const sizeClasses = {
  'sm': 'max-w-sm',
  'md': 'max-w-md',
  'lg': 'max-w-lg',
  'xl': 'max-w-xl',
  'full': 'max-w-none w-full h-full m-0 rounded-none'
};
---

<!-- 
Pine UI Modal Component

Usage:
<Modal id="example-modal" size="md" closeable={true}>
  <div slot="trigger">
    <Button>Open Modal</Button>
  </div>
  
  <div slot="header">
    <h2>Modal Title</h2>
  </div>
  
  <div slot="body">
    <p>Modal content goes here...</p>
  </div>
  
  <div slot="footer">
    <Button variant="outline">Cancel</Button>
    <Button>Confirm</Button>
  </div>
</Modal>

Features:
- Multiple sizes
- Escape key to close
- Click outside to close
- Focus trapping
- Smooth transitions
- Alpine.js powered
-->

<div 
  x-data="{ modalOpen: false }"
  @keydown.escape.window="modalOpen = false"
  class="relative z-50 w-auto h-auto"
>
  <!-- Trigger -->
  <div @click="modalOpen = true">
    <slot name="trigger" />
  </div>
  
  <!-- Modal -->
  <template x-teleport="body">
    <div 
      x-show="modalOpen" 
      x-transition.opacity.duration.200ms
      x-trap.inert.noscroll="modalOpen"
      class={`fixed inset-0 z-[99] flex items-center justify-center w-screen h-screen bg-black bg-opacity-50 ${backdropClass}`}
      @click.self={closeable ? "modalOpen = false" : ""}
    >
      <div 
        x-show="modalOpen"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class={`w-full ${sizeClasses[size]} bg-white rounded-lg shadow-xl ${className}`}
      >
        <!-- Header -->
        <div class="flex items-center justify-between px-6 py-4 border-b border-neutral-100">
          <div class="flex-1">
            <slot name="header" />
          </div>
          {closeable && (
            <button 
              @click="modalOpen = false"
              class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
              type="button"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          )}
        </div>
        
        <!-- Body -->
        <div class="px-6 py-4">
          <slot name="body" />
          <slot />
        </div>
        
        <!-- Footer -->
        <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-neutral-100">
          <slot name="footer" />
        </div>
      </div>
    </div>
  </template>
</div>