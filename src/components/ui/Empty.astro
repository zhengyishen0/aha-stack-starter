---
// Import component styles
import '../../styles/components/states.css';

export interface Props {
  class?: string;
  [key: string]: any; // Allow any Alpine.js attributes
}

const { 
  class: className = "",
  ...rest
} = Astro.props;
---

<!-- 
TRUE Design System Empty Component

Usage:
<Empty x-show="todos.length === 0 && !loading">
  <span x-show="filter === 'all'">No todos yet!</span>
  <span x-show="filter === 'active'">No active todos.</span>
</Empty>

<Empty x-show="items.length === 0">
  No items found.
</Empty>
-->

<div class={`empty-state ${className}`} {...rest}>
  <slot />
</div>