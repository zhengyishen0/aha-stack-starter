---
import { cn } from '@/lib/utils';

export interface Props {
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  className,
  ...alpineProps
} = Astro.props;
---


<div 
  class={cn("flex items-center p-6 pt-0 card-footer", className)}
  {...alpineProps}
>
  <slot />
</div>