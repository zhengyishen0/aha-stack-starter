---
import { cn } from '@/lib/utils';

export interface Props {
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  className,
  ...alpineProps
} = Astro.props;
---


<div 
  class={cn("p-6 flex-1 card-content min-h-0", className)}
  {...alpineProps}
>
  <slot />
</div>