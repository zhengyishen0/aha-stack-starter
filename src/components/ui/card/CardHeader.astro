---
import { cn } from '@/lib/utils';

export interface Props {
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  className,
  ...alpineProps
} = Astro.props;
---


<div 
  class={cn("flex flex-col gap-y-1.5 p-6 card-header", className)}
  {...alpineProps}
>
  <slot />
</div>