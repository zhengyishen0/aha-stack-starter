---
import { cn } from '@/lib/utils';

export interface Props {
  value?: string;
  className?: string;
  [key: string]: any;
}

const {
  value,
  className,
  ...alpineProps
} = Astro.props;
---

<div 
  x-data="{ id: $id('accordion') }"
  {...alpineProps}
  :class={`"${cn(
    'duration-200 ease-out bg-white border border-neutral-200/60 rounded-md cursor-pointer group mb-2',
    className
  )}"`}
  x-cloak
>
  <slot />
</div>