---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const buttonVariants = cva(
  "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium tracking-wide transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-neutral-950 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0",
  {
    variants: {
      variant: {
        default: "bg-neutral-950 text-white hover:bg-neutral-900",
        destructive: "bg-red-600 text-white hover:bg-red-700",
        outline: "border-2 border-neutral-950 bg-white text-neutral-950 hover:bg-neutral-950 hover:text-white",
        secondary: "bg-neutral-100 text-neutral-800 hover:bg-neutral-200",
        ghost: "bg-transparent text-neutral-700 hover:bg-neutral-100",
        link: "text-neutral-950 underline-offset-4 hover:underline bg-transparent"
      },
      size: {
        default: "h-9 px-4 py-2",
        sm: "h-8 px-3 text-xs",
        lg: "h-11 px-8",
        icon: "h-9 w-9"
      }
    },
    defaultVariants: {
      variant: "default",
      size: "default"
    }
  }
);

export interface Props extends VariantProps<typeof buttonVariants> {
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  variant,
  size,
  disabled = false,
  type = 'button',
  className,
  ...alpineProps
} = Astro.props;
---

<!-- 
Pine UI Button Component - Refactored with CVA + shadcn patterns

Usage:
<Button variant="default" size="default">Click me</Button>
<Button variant="outline" disabled>Disabled</Button>
<Button variant="destructive" size="lg">Delete</Button>
<Button variant="ghost" size="sm">Cancel</Button>

Variants: default, destructive, outline, secondary, ghost, link
Sizes: default, sm, lg, icon
-->

<button 
  type={type}
  disabled={disabled}
  class={cn(buttonVariants({ variant, size }), className)}
  {...alpineProps}
>
  <slot />
</button>