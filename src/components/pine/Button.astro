---
export interface Props {
  variant?: 'solid' | 'outline' | 'soft' | 'ghost';
  color?: 'neutral' | 'blue' | 'red' | 'green' | 'yellow' | 'purple';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  disabled?: boolean;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const { 
  variant = 'solid',
  color = 'neutral',
  size = 'md',
  disabled = false,
  type = 'button',
  class: className = ""
} = Astro.props;

const variantClasses: {
  [variant: string]: { [color: string]: string }
} = {
  solid: {
    'neutral': 'bg-neutral-950 text-white hover:bg-neutral-900 focus:ring-neutral-900',
    'blue': 'bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-600',
    'red': 'bg-red-600 text-white hover:bg-red-700 focus:ring-red-600',
    'green': 'bg-green-600 text-white hover:bg-green-700 focus:ring-green-600',
    'yellow': 'bg-yellow-500 text-white hover:bg-yellow-600 focus:ring-yellow-500',
    'purple': 'bg-purple-600 text-white hover:bg-purple-700 focus:ring-purple-600',
  },
  outline: {
    'neutral': 'bg-white border-2 border-neutral-950 text-neutral-950 hover:bg-neutral-950 hover:text-white focus:ring-neutral-900',
    'blue': 'bg-white border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white focus:ring-blue-600',
    'red': 'bg-white border-2 border-red-600 text-red-600 hover:bg-red-600 hover:text-white focus:ring-red-600',
    'green': 'bg-white border-2 border-green-600 text-green-600 hover:bg-green-600 hover:text-white focus:ring-green-600',
    'yellow': 'bg-white border-2 border-yellow-500 text-yellow-500 hover:bg-yellow-500 hover:text-white focus:ring-yellow-500',
    'purple': 'bg-white border-2 border-purple-600 text-purple-600 hover:bg-purple-600 hover:text-white focus:ring-purple-600',
  },
  soft: {
    'neutral': 'bg-neutral-100 text-neutral-800 hover:bg-neutral-200 focus:ring-neutral-500',
    'blue': 'bg-blue-50 text-blue-600 hover:bg-blue-100 focus:ring-blue-500',
    'red': 'bg-red-50 text-red-600 hover:bg-red-100 focus:ring-red-500',
    'green': 'bg-green-50 text-green-600 hover:bg-green-100 focus:ring-green-500',
    'yellow': 'bg-yellow-50 text-yellow-600 hover:bg-yellow-100 focus:ring-yellow-500',
    'purple': 'bg-purple-50 text-purple-600 hover:bg-purple-100 focus:ring-purple-500',
  },
  ghost: {
    'neutral': 'bg-transparent text-neutral-700 hover:bg-neutral-100 focus:ring-neutral-500',
    'blue': 'bg-transparent text-blue-600 hover:bg-blue-50 focus:ring-blue-500',
    'red': 'bg-transparent text-red-600 hover:bg-red-50 focus:ring-red-500',
    'green': 'bg-transparent text-green-600 hover:bg-green-50 focus:ring-green-500',
    'yellow': 'bg-transparent text-yellow-600 hover:bg-yellow-50 focus:ring-yellow-500',
    'purple': 'bg-transparent text-purple-600 hover:bg-purple-50 focus:ring-purple-500',
  }
};

const sizeClasses: { [key: string]: string } = {
  'sm': 'px-3 py-1.5 text-sm',
  'md': 'px-4 py-2 text-sm',
  'lg': 'px-6 py-3 text-base',
  'xl': 'px-8 py-4 text-lg',
};
---

<!-- 
Pine UI Button Component

Usage:
<Button variant="solid" color="blue" size="md">Click me</Button>
<Button variant="outline" color="red" disabled>Disabled</Button>

Variants: solid, outline, soft, ghost
Colors: neutral, blue, red, green, yellow, purple
Sizes: sm, md, lg, xl
-->

<button 
  type={type}
  disabled={disabled}
  class={`inline-flex items-center justify-center font-medium tracking-wide transition-colors duration-200 rounded-md focus:ring-2 focus:ring-offset-2 focus:shadow-outline focus:outline-none ${sizeClasses[size]} ${variantClasses[variant][color]} ${disabled ? 'opacity-50 cursor-not-allowed' : ''} ${className}`}
  {...Astro.props}
>
  <slot />
</button>