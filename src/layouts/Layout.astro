---
export interface Props {
  title?: string;
}

const { title = "AHA Stack" } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- HTMX -->
		<script is:inline src="https://unpkg.com/htmx.org@2.0.6"></script>
		
		<!-- HTMX Extensions -->
		<script src="https://unpkg.com/htmx-json@1.3.1"></script>
		
		<!-- Alpine.js Plugins (must be loaded before Alpine.js core) -->
		<script src="https://unpkg.com/@alpinejs/mask@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/intersect@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/persist@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/focus@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/collapse@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/anchor@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/morph@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/sort@3.14.9/dist/cdn.min.js"></script>
		<script src="https://unpkg.com/@alpinejs/resize@3.14.9/dist/cdn.min.js"></script>
		
		<!-- Supabase -->
		<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2" crossorigin="anonymous"></script>
		
		<!-- Global App Initialization -->
		<script>
			// Initialize Supabase globally when app starts
			window.App = {
				supabase: null,
				
				async init() {
					// Wait for Supabase to be available
					if (typeof window.supabase === 'undefined') {
						setTimeout(() => this.init(), 100);
						return;
					}
					
					const SUPABASE_URL = 'https://wiqivthmlgjwtlrnynsq.supabase.co';
					const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6IndpcWl2dGhtbGdqd3Rscm55bnNxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTI1NTY1MDgsImV4cCI6MjA2ODEzMjUwOH0.1Nh6nIbXolEkrpSFYzF-l3LqYmkQw0d4xzdi1xoez9M';
					
					this.supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
					console.log('Global Supabase client initialized');
				}
			};
			
			// Initialize when DOM loads
			document.addEventListener('DOMContentLoaded', function() {
				window.App.init();
			});
		</script>
		
		<!-- Alpine.js Core (must be loaded after all plugins) -->
		<script src="https://unpkg.com/alpinejs@3.14.9/dist/cdn.min.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import '../styles/global.css';
	
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	
	[x-cloak] {
		display: none !important;
	}
</style>